.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-box {
  position: relative;
  width: 560rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(200, 160, 100, 0.3);
}

/* 流光背景层 */
.shimmer-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    135deg,
    #FFF8F0 0%,
    #FFECD9 25%,
    #FFF5E6 50%,
    #FFE8CC 75%,
    #FFF0DB 100%
  );
  z-index: 0;
}

.shimmer-overlay {
  position: absolute;
  top: 0;
  left: -100%;
  width: 200%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0) 40%,
    rgba(255, 255, 255, 0.8) 50%,
    rgba(255, 255, 255, 0) 60%,
    transparent 100%
  );
  animation: shimmer 3s ease-in-out infinite;
  z-index: 1;
}

@keyframes shimmer {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(50%);
  }
}

/* 内容层 */
.modal-content {
  position: relative;
  z-index: 2;
  padding: 48rpx 40rpx;
  text-align: center;
}

/* 顶部装饰闪光点 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  pointer-events: none;
}

.sparkle {
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  background: linear-gradient(135deg, #FFD700, #FFA500);
  border-radius: 50%;
  animation: sparkle 2s ease-in-out infinite;
}

.sparkle-1 {
  top: 30rpx;
  left: 60rpx;
  animation-delay: 0s;
}

.sparkle-2 {
  top: 20rpx;
  right: 80rpx;
  animation-delay: 0.7s;
}

.sparkle-3 {
  top: 50rpx;
  left: 50%;
  animation-delay: 1.4s;
}

@keyframes sparkle {
  0%, 100% {
    transform: scale(0.5);
    opacity: 0.3;
  }
  50% {
    transform: scale(1.2);
    opacity: 1;
  }
}

.modal-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #8B6914;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(139, 105, 20, 0.1);
}

.modal-desc {
  font-size: 26rpx;
  color: #A08050;
  margin-bottom: 40rpx;
}

/* 图标区域 - Logo + 交换 + 微信 */
.icons-area {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 48rpx;
  gap: 24rpx;
}

.icon-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 通用光晕效果 */
.icon-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  animation: iconGlow 2s ease-in-out infinite;
}

.logo-glow {
  background: radial-gradient(circle, rgba(232, 182, 134, 0.4) 0%, transparent 70%);
}

.wechat-glow {
  background: radial-gradient(circle, rgba(7, 193, 96, 0.3) 0%, transparent 70%);
}

@keyframes iconGlow {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.5;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.15);
    opacity: 0.8;
  }
}

/* 通用圆形容器 */
.icon-circle {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Logo圆形 */
.logo-circle {
  background: linear-gradient(135deg, #FFF8F0 0%, #FFECD9 100%);
  box-shadow: 0 6rpx 20rpx rgba(232, 182, 134, 0.4);
  border: 3rpx solid rgba(232, 182, 134, 0.5);
  overflow: hidden;
}

.app-logo-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 微信圆形 */
.wechat-circle {
  background: linear-gradient(135deg, #1AAD19 0%, #07C160 50%, #06AE56 100%);
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.4);
}

.wechat-icon {
  width: 54rpx;
  height: 54rpx;
}

/* 交换图标 - CSS绘制 */
.exchange-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.exchange-arrows {
  position: relative;
  width: 40rpx;
  height: 32rpx;
}

/* 右箭头 */
.arrow {
  position: absolute;
  width: 20rpx;
  height: 2rpx;
  background: #C9956A;
}

.arrow::before,
.arrow::after {
  content: '';
  position: absolute;
  width: 8rpx;
  height: 2rpx;
  background: #C9956A;
}

.arrow-right {
  top: 8rpx;
  left: 0;
  animation: arrowMoveRight 1.5s ease-in-out infinite;
}

.arrow-right::before {
  right: 0;
  top: -4rpx;
  transform: rotate(45deg);
  transform-origin: right center;
}

.arrow-right::after {
  right: 0;
  top: 4rpx;
  transform: rotate(-45deg);
  transform-origin: right center;
}

/* 左箭头 */
.arrow-left {
  bottom: 8rpx;
  right: 0;
  animation: arrowMoveLeft 1.5s ease-in-out infinite;
}

.arrow-left::before {
  left: 0;
  top: -4rpx;
  transform: rotate(-45deg);
  transform-origin: left center;
}

.arrow-left::after {
  left: 0;
  top: 4rpx;
  transform: rotate(45deg);
  transform-origin: left center;
}

@keyframes arrowMoveRight {
  0%, 100% {
    transform: translateX(0);
    opacity: 0.6;
  }
  50% {
    transform: translateX(4rpx);
    opacity: 1;
  }
}

@keyframes arrowMoveLeft {
  0%, 100% {
    transform: translateX(0);
    opacity: 0.6;
  }
  50% {
    transform: translateX(-4rpx);
    opacity: 1;
  }
}

/* 金色登录按钮 */
.btn-login {
  position: relative;
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #F5D0A9 0%, #E8B686 30%, #D4A574 70%, #C9956A 100%);
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(200, 150, 100, 0.4);
}

.btn-login::after {
  border: none;
}

/* 按钮流光效果 */
.btn-shimmer {
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.4) 50%,
    transparent 100%
  );
  animation: btnShimmer 2.5s ease-in-out infinite;
}

@keyframes btnShimmer {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}

.btn-text {
  position: relative;
  z-index: 1;
  text-shadow: 0 2rpx 4rpx rgba(139, 105, 20, 0.3);
}

/* 先逛逛按钮（游客模式） */
.btn-guest {
  margin-top: 28rpx;
  font-size: 28rpx;
  color: #A08050;
  padding: 12rpx 24rpx;
  text-decoration: underline;
}

.btn-guest:active {
  opacity: 0.7;
}
