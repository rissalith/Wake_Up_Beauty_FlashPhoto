<view class="custom-navbar" style="background-color: {{bgColor}};">
  <!-- 状态栏占位 -->
  <view class="status-bar" style="height: {{statusBarHeight}}px;"></view>
  <!-- 导航栏内容 -->
  <view class="nav-content" style="height: {{navBarHeight}}px;">
    <!-- 返回按钮区域 -->
    <view class="nav-left" wx:if="{{back}}" bindtap="goBack">
      <view class="back-icon" style="border-color: {{textColor}};"></view>
    </view>
    <!-- 标题 - 绝对定位居中 -->
    <view class="nav-title" style="color: {{textColor}}; line-height: {{navBarHeight}}px;">{{title}}</view>
    <!-- 右侧占位区域，与胶囊对齐 -->
    <view class="nav-right" style="width: {{menuRight + menuWidth + 10}}px;"></view>
  </view>
</view>
<!-- 占位元素 -->
<view class="navbar-placeholder" style="height: {{statusBarHeight + navBarHeight}}px;"></view>
