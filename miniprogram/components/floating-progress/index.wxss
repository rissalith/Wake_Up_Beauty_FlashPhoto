/* 悬浮进度条组件样式 */
/* 奶油渐变风格配色 - 胶囊形状 */

/* 悬浮进度条容器 */
.floating-progress {
  position: fixed;
  left: 50%;
  transform: translateX(-50%) translateY(-100%);
  z-index: 1001;
  transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.floating-progress.show {
  transform: translateX(-50%) translateY(8rpx);
}

/* 内部容器 - 胶囊形状 */
.progress-inner {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.95);
  padding: 12rpx 20rpx;
  border-radius: 100rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 完成状态 */
.floating-progress.completed .progress-inner {
  background: rgba(255, 255, 255, 0.95);
}

/* 图标区域 */
.progress-icon {
  flex-shrink: 0;
  width: 24rpx;
  height: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 加载动画 - 灰色圆环 */
.spinner {
  width: 22rpx;
  height: 22rpx;
  border: 2rpx solid #e0e0e0;
  border-top-color: #999;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 完成图标 - 绿色对勾 */
.check-icon {
  width: 22rpx;
  height: 22rpx;
  position: relative;
}

.check-icon::after {
  content: '';
  position: absolute;
  left: 6rpx;
  top: 2rpx;
  width: 8rpx;
  height: 14rpx;
  border: solid #52c41a;
  border-width: 0 3rpx 3rpx 0;
  transform: rotate(45deg);
}

/* 文字内容区 */
.progress-content {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
  min-width: 0;
}

.progress-main-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.3;
}

.progress-sub-text {
  font-size: 20rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.2;
}

/* 箭头 */
.progress-arrow {
  flex-shrink: 0;
  font-size: 24rpx;
  color: #ccc;
  margin-left: 4rpx;
}
