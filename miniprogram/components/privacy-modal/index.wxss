.privacy-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1001;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: relative;
  width: 85%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 标题 */
.modal-header {
  padding: 20rpx 30rpx 20rpx;
  text-align: center;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

/* 内容 */
.modal-body {
  padding: 0 40rpx 30rpx;
}

.content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-bottom: 30rpx;
}

/* 政策列表 */
.policy-list {
  background: #F9F9F9;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  padding: 24rpx 30rpx;
}

.policy-item {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

/* 勾选框样式 */

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  transition: all 0.2s ease;
}

.checkbox.checked {
  background: linear-gradient(135deg, #F5D0A9 0%, #E8B686 100%);
  border-color: #E8B686;
}

.check-icon {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
}

.policy-label {
  font-size: 26rpx;
  color: #666;
}

.policy-link {
  font-size: 26rpx;
  color: #E8B686;
  font-weight: 500;
  text-decoration: underline;
}

/* 提示 */
.tips {
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #FFF8F0 0%, #FFFAF5 100%);
  border-radius: 12rpx;
}

/* 使用类选择器替代标签选择器，符合组件 WXSS 规范 */
.tips-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}

/* 按钮 */
.modal-footer {
  display: flex;
  padding: 20rpx 30rpx 40rpx;
  gap: 20rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn::after {
  border: none;
}

.btn-reject {
  background: #F5F5F5;
  color: #999;
}

.btn-agree {
  background: linear-gradient(135deg, #F5D0A9 0%, #E8B686 100%);
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(232, 182, 134, 0.3);
}

.btn-agree.disabled {
  background: #E0E0E0;
  color: #999;
  box-shadow: none;
}

/* ========== 协议详情视图样式 ========== */
.policy-detail-view {
  position: relative;
  width: 90%;
  max-width: 650rpx;
  height: 80vh;
  max-height: 1000rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(30rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* 详情页头部 */
.detail-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
  background: linear-gradient(135deg, #FFF8F0 0%, #FFFAF5 100%);
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 10rpx;
}

.back-arrow {
  font-size: 40rpx;
  color: #E8B686;
  font-weight: 300;
  line-height: 1;
}

.back-text {
  font-size: 28rpx;
  color: #E8B686;
  margin-left: 4rpx;
}

.detail-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.header-placeholder {
  width: 100rpx;
}

/* 详情内容滚动区 */
.detail-content {
  flex: 1;
  overflow: hidden;
}

.policy-text {
  padding: 30rpx;
}

/* 协议内容样式 */
.policy-text .section {
  margin-bottom: 30rpx;
}

.policy-text .section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.policy-text .section-subtitle {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.policy-text .sub-section {
  margin: 20rpx 0;
  padding-left: 16rpx;
}

.policy-text .sub-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #555;
  margin-bottom: 12rpx;
}

.policy-text .paragraph {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 12rpx;
}

.policy-text .list-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  padding-left: 8rpx;
  margin-bottom: 8rpx;
}

.policy-text .update-time {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin-top: 30rpx;
}
