/* 结果展示子组件样式 */
.result-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

/* 成语结果 */
.result-phrase {
  text-align: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
  border-radius: 20rpx;
  min-width: 300rpx;
  box-shadow: 0 8rpx 30rpx rgba(211, 47, 47, 0.3);
}

.phrase-text {
  font-size: 56rpx;
  font-weight: bold;
  color: #ffd700;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 8rpx;
  display: block;
}

.phrase-en {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 16rpx;
  display: block;
}

.phrase-rarity {
  margin-top: 16rpx;
}

/* 马品级结果 */
.result-horse {
  text-align: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  min-width: 280rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.horse-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
}

.horse-placeholder {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
  border-radius: 16rpx;
  margin: 0 auto;
}

.horse-icon {
  font-size: 100rpx;
}

.horse-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-top: 20rpx;
  display: block;
}

.horse-rarity {
  margin-top: 12rpx;
}

.horse-desc {
  font-size: 26rpx;
  color: #666;
  margin-top: 12rpx;
  display: block;
}

/* 稀有度标签 */
.rarity-tag {
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.rarity-tag.rarity-common {
  background: #e0e0e0;
  color: #666;
}

.rarity-tag.rarity-rare {
  background: linear-gradient(135deg, #4fc3f7 0%, #0288d1 100%);
  color: #fff;
}

.rarity-tag.rarity-epic {
  background: linear-gradient(135deg, #ba68c8 0%, #7b1fa2 100%);
  color: #fff;
}

.rarity-tag.rarity-legendary {
  background: linear-gradient(135deg, #ffd54f 0%, #ff8f00 100%);
  color: #fff;
}

/* 马品级稀有度边框 */
.result-horse.rarity-rare {
  border: 2rpx solid #0288d1;
}

.result-horse.rarity-epic {
  border: 2rpx solid #7b1fa2;
  box-shadow: 0 4rpx 20rpx rgba(123, 31, 162, 0.3);
}

.result-horse.rarity-legendary {
  border: 2rpx solid #ff8f00;
  box-shadow: 0 4rpx 30rpx rgba(255, 143, 0, 0.4);
  animation: legendary-glow 2s infinite;
}

@keyframes legendary-glow {
  0%, 100% { box-shadow: 0 4rpx 30rpx rgba(255, 143, 0, 0.4); }
  50% { box-shadow: 0 4rpx 50rpx rgba(255, 143, 0, 0.6); }
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  gap: 16rpx;
}

.btn-confirm {
  padding: 20rpx 60rpx;
  background: linear-gradient(135deg, #4caf50 0%, #388e3c 100%);
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(76, 175, 80, 0.3);
}

.btn-reroll {
  padding: 16rpx 40rpx;
  background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 15rpx rgba(211, 47, 47, 0.3);
}

.reroll-cost {
  font-size: 24rpx;
  opacity: 0.9;
  margin-left: 8rpx;
}

.reroll-free {
  font-size: 24rpx;
  color: #ffd700;
  margin-left: 8rpx;
}

/* 动态动画效果 */
.animation-shimmer {
  animation: shimmer 3s ease-in-out infinite;
}

.animation-glow {
  animation: glow 2s ease-in-out infinite;
}

.animation-pulse {
  animation: pulse 2s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { filter: brightness(1); }
  50% { filter: brightness(1.15); }
}

@keyframes glow {
  0%, 100% { box-shadow: 0 4rpx 30rpx rgba(255, 215, 0, 0.4); }
  50% { box-shadow: 0 4rpx 50rpx rgba(255, 215, 0, 0.7); }
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.02); }
}
