/* 结果展示子组件样式 - 新春风格 */
.result-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  width: 100%;
  animation: fadeInUp 0.4s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ========== 成语结果卡片 ========== */
.result-phrase {
  position: relative;
  text-align: center;
  padding: 50rpx 40rpx 40rpx;
  background: linear-gradient(180deg, #fff9e6 0%, #fff5d6 100%);
  border-radius: 24rpx;
  min-width: 400rpx;
  max-width: 500rpx;
  border: 3rpx solid #d4a84b;
  box-shadow:
    0 8rpx 40rpx rgba(180, 120, 40, 0.15),
    inset 0 2rpx 0 rgba(255, 255, 255, 0.8);
  overflow: hidden;
}

/* 顶部装饰条 */
.result-phrase::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #d4a84b 0%, #f5d98a 50%, #d4a84b 100%);
}

/* 底部装饰 */
.result-phrase::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 120rpx;
  height: 6rpx;
  background: linear-gradient(90deg, transparent, #d4a84b, transparent);
  border-radius: 3rpx;
}

.phrase-text {
  font-size: 52rpx;
  font-weight: bold;
  color: #8b4513;
  letter-spacing: 12rpx;
  display: block;
  text-shadow: 1rpx 1rpx 2rpx rgba(139, 69, 19, 0.2);
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
}

.phrase-en {
  font-size: 24rpx;
  color: #a08060;
  margin-top: 16rpx;
  display: block;
  font-style: italic;
  letter-spacing: 2rpx;
}

.phrase-rarity {
  margin-top: 20rpx;
}

/* ========== 马品级结果卡片 ========== */
.result-horse {
  position: relative;
  text-align: center;
  padding: 40rpx 30rpx;
  background: linear-gradient(180deg, #ffffff 0%, #fafafa 100%);
  border-radius: 24rpx;
  min-width: 320rpx;
  max-width: 400rpx;
  border: 2rpx solid #e8e8e8;
  box-shadow: 0 6rpx 30rpx rgba(0, 0, 0, 0.08);
}

.horse-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
}

.horse-placeholder {
  width: 180rpx;
  height: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #fff5e6 0%, #ffe4c4 100%);
  border-radius: 16rpx;
  margin: 0 auto;
  border: 2rpx solid #e8d4b8;
}

.horse-icon {
  font-size: 80rpx;
}

.horse-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-top: 20rpx;
  display: block;
}

.horse-rarity {
  margin-top: 16rpx;
}

.horse-desc {
  font-size: 24rpx;
  color: #888;
  margin-top: 12rpx;
  display: block;
  line-height: 1.5;
}

/* ========== 稀有度标签 ========== */
.rarity-tag {
  display: inline-block;
  padding: 8rpx 28rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
}

.rarity-tag.rarity-common {
  background: linear-gradient(135deg, #f0f0f0 0%, #e0e0e0 100%);
  color: #666;
  border: 1rpx solid #d0d0d0;
}

.rarity-tag.rarity-rare {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  color: #1565c0;
  border: 1rpx solid #90caf9;
}

.rarity-tag.rarity-epic {
  background: linear-gradient(135deg, #f3e5f5 0%, #e1bee7 100%);
  color: #7b1fa2;
  border: 1rpx solid #ce93d8;
}

.rarity-tag.rarity-legendary {
  background: linear-gradient(135deg, #fff8e1 0%, #ffecb3 100%);
  color: #e65100;
  border: 1rpx solid #ffd54f;
}

/* 马品级稀有度边框效果 */
.result-horse.rarity-rare {
  border-color: #64b5f6;
  background: linear-gradient(180deg, #ffffff 0%, #e3f2fd 100%);
}

.result-horse.rarity-epic {
  border-color: #ba68c8;
  background: linear-gradient(180deg, #ffffff 0%, #f3e5f5 100%);
  box-shadow: 0 6rpx 30rpx rgba(123, 31, 162, 0.15);
}

.result-horse.rarity-legendary {
  border-color: #ffb74d;
  background: linear-gradient(180deg, #ffffff 0%, #fff8e1 100%);
  box-shadow: 0 6rpx 40rpx rgba(255, 152, 0, 0.2);
  animation: legendary-glow 2.5s ease-in-out infinite;
}

@keyframes legendary-glow {
  0%, 100% { box-shadow: 0 6rpx 40rpx rgba(255, 152, 0, 0.2); }
  50% { box-shadow: 0 8rpx 50rpx rgba(255, 152, 0, 0.35); }
}

/* ========== 操作按钮 ========== */
.action-buttons {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 36rpx;
  gap: 20rpx;
  width: 100%;
}

.btn-confirm {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 320rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #d4956a 0%, #c17f4e 100%);
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 4rpx;
  box-shadow: 0 6rpx 20rpx rgba(193, 127, 78, 0.35);
  transition: all 0.2s ease;
}

.btn-confirm:active {
  transform: scale(0.96);
  box-shadow: 0 3rpx 10rpx rgba(193, 127, 78, 0.3);
}

.btn-reroll {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 280rpx;
  height: 68rpx;
  background: linear-gradient(135deg, #f5f5f5 0%, #eeeeee 100%);
  color: #666;
  border-radius: 34rpx;
  font-size: 26rpx;
  border: 1rpx solid #ddd;
  transition: all 0.2s ease;
}

.btn-reroll:active {
  transform: scale(0.96);
  background: linear-gradient(135deg, #eeeeee 0%, #e0e0e0 100%);
}

.reroll-cost {
  font-size: 22rpx;
  color: #999;
  margin-left: 6rpx;
}

.reroll-free {
  font-size: 22rpx;
  color: #d4956a;
  margin-left: 6rpx;
  font-weight: 500;
}

/* ========== 动画效果 ========== */
.animation-shimmer {
  animation: shimmer 3s ease-in-out infinite;
}

.animation-glow {
  animation: glow 2s ease-in-out infinite;
}

.animation-pulse {
  animation: pulse 2s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { filter: brightness(1); }
  50% { filter: brightness(1.08); }
}

@keyframes glow {
  0%, 100% { box-shadow: 0 8rpx 40rpx rgba(212, 168, 75, 0.2); }
  50% { box-shadow: 0 10rpx 50rpx rgba(212, 168, 75, 0.35); }
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.015); }
}
