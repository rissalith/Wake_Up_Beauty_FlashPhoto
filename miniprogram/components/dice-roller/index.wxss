/* 摇骰子容器组件样式（重构版） */
.dice-roller {
  padding: 30rpx;
  background: linear-gradient(135deg, #fff5f5 0%, #fff 100%);
  border-radius: 24rpx;
  margin: 20rpx 0;
}

/* 标题区域 */
.dice-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.dice-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.dice-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

/* 骰子容器 */
.dice-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 300rpx;
}

/* 骰子包装器 */
.dice-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 骰子提示 */
.dice-hint {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.rolling-hint {
  color: #d32f2f;
  animation: pulse 0.5s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 已确认提示 */
.confirmed-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  padding: 12rpx 24rpx;
  background: #e8f5e9;
  border-radius: 20rpx;
  color: #4caf50;
  font-size: 28rpx;
}

.confirmed-icon {
  margin-right: 8rpx;
  font-weight: bold;
}

/* 免费次数提示 */
.free-hint {
  text-align: center;
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 付费确认弹窗 */
.confirm-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.confirm-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.confirm-content {
  position: relative;
  width: 560rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  text-align: center;
}

.confirm-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.confirm-desc {
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}

.confirm-balance {
  font-size: 26rpx;
  color: #999;
  margin-top: 12rpx;
}

.confirm-btns {
  display: flex;
  margin-top: 40rpx;
  gap: 20rpx;
}

.confirm-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.confirm-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn.ok {
  background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
  color: #fff;
}
