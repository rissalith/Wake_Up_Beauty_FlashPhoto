/* 摇骰子容器组件样式 - 横向布局版 */
.dice-roller {
  padding: 20rpx 0;
}

/* 主内容区：横向布局 */
.dice-main {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

/* ========== 左侧结果区域 ========== */
.result-area {
  flex: 1;
  min-height: 160rpx;
}

/* 成语卡片 */
.phrase-card {
  padding: 30rpx 24rpx;
  background: linear-gradient(180deg, #fff9e6 0%, #fff5d6 100%);
  border-radius: 16rpx;
  border: 2rpx solid #d4a84b;
  text-align: center;
}

.phrase-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #8b4513;
  letter-spacing: 8rpx;
  display: block;
}

.phrase-en {
  font-size: 22rpx;
  color: #a08060;
  margin-top: 8rpx;
  display: block;
  font-style: italic;
}

/* 马品级卡片 */
.horse-card {
  padding: 24rpx;
  background: linear-gradient(180deg, #fff 0%, #fafafa 100%);
  border-radius: 16rpx;
  border: 2rpx solid #e8e8e8;
  text-align: center;
}

.horse-card.legendary {
  border-color: #ffb74d;
  background: linear-gradient(180deg, #fff 0%, #fff8e1 100%);
}

.horse-card.epic {
  border-color: #ba68c8;
  background: linear-gradient(180deg, #fff 0%, #f3e5f5 100%);
}

.horse-card.rare {
  border-color: #64b5f6;
  background: linear-gradient(180deg, #fff 0%, #e3f2fd 100%);
}

.horse-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
}

.horse-placeholder {
  font-size: 60rpx;
  line-height: 1;
}

.horse-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-top: 12rpx;
  display: block;
}

/* 空占位 */
.empty-placeholder {
  padding: 40rpx 24rpx;
  background: linear-gradient(180deg, #fafafa 0%, #f5f5f5 100%);
  border-radius: 16rpx;
  border: 2rpx dashed #ddd;
  text-align: center;
}

.empty-text {
  font-size: 26rpx;
  color: #bbb;
}

/* ========== 右侧骰子区域 ========== */
.dice-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 140rpx;
}

.dice-wrapper {
  padding: 16rpx;
  background: linear-gradient(180deg, #fff 0%, #f8f8f8 100%);
  border-radius: 16rpx;
  border: 2rpx solid #eee;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.dice-wrapper:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
}

/* 状态提示 */
.dice-status {
  margin-top: 12rpx;
}

.status-text {
  font-size: 20rpx;
  color: #999;
}

.status-text.rolling {
  color: #d4956a;
  animation: pulse 0.5s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 费用提示 */
.cost-hint {
  margin-top: 8rpx;
}

.free-tag {
  font-size: 20rpx;
  color: #4caf50;
  padding: 4rpx 12rpx;
  background: #e8f5e9;
  border-radius: 10rpx;
}

.cost-tag {
  font-size: 20rpx;
  color: #d4956a;
  padding: 4rpx 12rpx;
  background: #fff5eb;
  border-radius: 10rpx;
}

/* ========== 付费确认弹窗 ========== */
.confirm-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.confirm-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.confirm-content {
  position: relative;
  width: 560rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.15);
}

.confirm-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.confirm-desc {
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}

.confirm-balance {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

.confirm-btns {
  display: flex;
  margin-top: 36rpx;
  gap: 20rpx;
}

.confirm-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.confirm-btn:active {
  transform: scale(0.96);
}

.confirm-btn.cancel {
  background: linear-gradient(135deg, #f5f5f5 0%, #eeeeee 100%);
  color: #666;
  border: 1rpx solid #ddd;
}

.confirm-btn.ok {
  background: linear-gradient(135deg, #d4956a 0%, #c17f4e 100%);
  color: #fff;
  box-shadow: 0 4rpx 15rpx rgba(193, 127, 78, 0.3);
}
