/* 摇骰子组件样式 */
.dice-roller {
  padding: 30rpx;
  background: linear-gradient(135deg, #fff5f5 0%, #fff 100%);
  border-radius: 24rpx;
  margin: 20rpx 0;
}

/* 标题区域 */
.dice-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.dice-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.dice-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

/* 骰子容器 */
.dice-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 300rpx;
}

/* 骰子盒子 */
.dice-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
}

/* 骰子 */
.dice {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(145deg, #ffffff, #e6e6e6);
  border-radius: 24rpx;
  box-shadow: 8rpx 8rpx 20rpx rgba(0, 0, 0, 0.15),
              -4rpx -4rpx 10rpx rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  transition: transform 0.1s ease;
}

.dice-box.rolling .dice {
  animation: shake 0.1s infinite;
}

@keyframes shake {
  0%, 100% { transform: rotate(0deg) scale(1); }
  25% { transform: rotate(-10deg) scale(1.05); }
  50% { transform: rotate(10deg) scale(0.95); }
  75% { transform: rotate(-5deg) scale(1.02); }
}

/* 骰子面 */
.dice-face {
  width: 120rpx;
  height: 120rpx;
  position: relative;
}

/* 骰子点 */
.dot {
  width: 24rpx;
  height: 24rpx;
  background: #d32f2f;
  border-radius: 50%;
  position: absolute;
  box-shadow: inset 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.dot.center {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.dot.top-left {
  top: 10rpx;
  left: 10rpx;
}

.dot.top-right {
  top: 10rpx;
  right: 10rpx;
}

.dot.middle-left {
  top: 50%;
  left: 10rpx;
  transform: translateY(-50%);
}

.dot.middle-right {
  top: 50%;
  right: 10rpx;
  transform: translateY(-50%);
}

.dot.bottom-left {
  bottom: 10rpx;
  left: 10rpx;
}

.dot.bottom-right {
  bottom: 10rpx;
  right: 10rpx;
}

/* 骰子提示 */
.dice-hint {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.rolling-hint {
  color: #d32f2f;
  animation: pulse 0.5s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 结果区域 */
.result-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

/* 成语结果 */
.result-phrase {
  text-align: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
  border-radius: 20rpx;
  min-width: 300rpx;
  box-shadow: 0 8rpx 30rpx rgba(211, 47, 47, 0.3);
}

.phrase-text {
  font-size: 56rpx;
  font-weight: bold;
  color: #ffd700;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 8rpx;
  display: block;
}

.phrase-en {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 16rpx;
  display: block;
}

/* 马品级结果 */
.result-horse {
  text-align: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  min-width: 280rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.horse-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
}

.horse-placeholder {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
  border-radius: 16rpx;
  margin: 0 auto;
}

.horse-icon {
  font-size: 100rpx;
}

.horse-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-top: 20rpx;
  display: block;
}

.horse-rarity {
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-top: 12rpx;
}

.horse-desc {
  font-size: 26rpx;
  color: #666;
  margin-top: 12rpx;
  display: block;
}

/* 稀有度样式 */
.rarity-common .horse-rarity,
.rarity-common {
  background: #e0e0e0;
  color: #666;
}

.rarity-rare .horse-rarity,
.result-horse.rarity-rare {
  background: linear-gradient(135deg, #4fc3f7 0%, #0288d1 100%);
  color: #fff;
}

.result-horse.rarity-rare {
  border: 2rpx solid #0288d1;
}

.rarity-epic .horse-rarity,
.result-horse.rarity-epic {
  background: linear-gradient(135deg, #ba68c8 0%, #7b1fa2 100%);
  color: #fff;
}

.result-horse.rarity-epic {
  border: 2rpx solid #7b1fa2;
  box-shadow: 0 4rpx 20rpx rgba(123, 31, 162, 0.3);
}

.rarity-legendary .horse-rarity,
.result-horse.rarity-legendary {
  background: linear-gradient(135deg, #ffd54f 0%, #ff8f00 100%);
  color: #fff;
}

.result-horse.rarity-legendary {
  border: 2rpx solid #ff8f00;
  box-shadow: 0 4rpx 30rpx rgba(255, 143, 0, 0.4);
  animation: legendary-glow 2s infinite;
}

@keyframes legendary-glow {
  0%, 100% { box-shadow: 0 4rpx 30rpx rgba(255, 143, 0, 0.4); }
  50% { box-shadow: 0 4rpx 50rpx rgba(255, 143, 0, 0.6); }
}

/* 重新摇骰子按钮 */
.reroll-btn {
  margin-top: 30rpx;
  padding: 16rpx 40rpx;
  background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 15rpx rgba(211, 47, 47, 0.3);
}

.reroll-cost {
  font-size: 24rpx;
  opacity: 0.9;
  margin-left: 8rpx;
}

.reroll-free {
  font-size: 24rpx;
  color: #ffd700;
  margin-left: 8rpx;
}

/* 免费次数提示 */
.free-hint {
  text-align: center;
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 付费确认弹窗 */
.confirm-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.confirm-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.confirm-content {
  position: relative;
  width: 560rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  text-align: center;
}

.confirm-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.confirm-desc {
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}

.confirm-btns {
  display: flex;
  margin-top: 40rpx;
  gap: 20rpx;
}

.confirm-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.confirm-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn.ok {
  background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
  color: #fff;
}
