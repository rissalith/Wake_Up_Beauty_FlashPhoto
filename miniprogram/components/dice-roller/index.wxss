/* 摇骰子容器组件样式 - 新春风格 */
.dice-roller {
  padding: 30rpx 20rpx;
  background: transparent;
  margin: 0;
}

/* 标题区域 */
.dice-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.dice-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.dice-subtitle {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

/* 骰子容器 */
.dice-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 280rpx;
}

/* 骰子包装器 */
.dice-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 骰子提示 */
.dice-hint {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #888;
}

.rolling-hint {
  color: #d4956a;
  animation: pulse 0.5s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 已确认提示 */
.confirmed-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #f0f7f0 0%, #e8f5e9 100%);
  border-radius: 20rpx;
  color: #4caf50;
  font-size: 26rpx;
  border: 1rpx solid #c8e6c9;
}

.confirmed-icon {
  margin-right: 8rpx;
  font-weight: bold;
}

/* 免费次数提示 */
.free-hint {
  text-align: center;
  margin-top: 16rpx;
  font-size: 22rpx;
  color: #aaa;
}

/* 付费确认弹窗 */
.confirm-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.confirm-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.confirm-content {
  position: relative;
  width: 560rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.15);
}

.confirm-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.confirm-desc {
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}

.confirm-balance {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

.confirm-btns {
  display: flex;
  margin-top: 36rpx;
  gap: 20rpx;
}

.confirm-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.confirm-btn:active {
  transform: scale(0.96);
}

.confirm-btn.cancel {
  background: linear-gradient(135deg, #f5f5f5 0%, #eeeeee 100%);
  color: #666;
  border: 1rpx solid #ddd;
}

.confirm-btn.ok {
  background: linear-gradient(135deg, #d4956a 0%, #c17f4e 100%);
  color: #fff;
  box-shadow: 0 4rpx 15rpx rgba(193, 127, 78, 0.3);
}
