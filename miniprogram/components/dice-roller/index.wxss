/* 摇骰子容器组件样式 - 横向布局版 */
.dice-roller {
  padding: 24rpx 0;
}

/* 主内容区：横向布局 */
.dice-main {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

/* ========== 左侧结果区域 ========== */
.result-area {
  flex: 1;
  min-height: 160rpx;
}

/* 成语卡片 */
.phrase-card {
  padding: 30rpx 24rpx;
  background: linear-gradient(180deg, #fff9e6 0%, #fff5d6 100%);
  border-radius: 16rpx;
  border: 2rpx solid #d4a84b;
  text-align: center;
}

.phrase-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #8b4513;
  letter-spacing: 8rpx;
  display: block;
}

.phrase-en {
  font-size: 22rpx;
  color: #a08060;
  margin-top: 8rpx;
  display: block;
  font-style: italic;
}

/* 马品级卡片 - 左图右字横向布局 */
.horse-card {
  padding: 16rpx 20rpx;
  background: linear-gradient(180deg, #fff 0%, #fafafa 100%);
  border-radius: 16rpx;
  border: 2rpx solid #e8e8e8;
  min-height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 20rpx;
}

/* 马品级颜色 */
.horse-card.divine {
  border-color: #ff6b6b;
  background: linear-gradient(180deg, #fff 0%, #ffebee 100%);
}

.horse-card.gold {
  border-color: #ffd700;
  background: linear-gradient(180deg, #fff 0%, #fffde7 100%);
}

.horse-card.silver {
  border-color: #b0bec5;
  background: linear-gradient(180deg, #fff 0%, #eceff1 100%);
}

.horse-card.common {
  border-color: #e0e0e0;
  background: linear-gradient(180deg, #fff 0%, #fafafa 100%);
}

/* 兼容旧的稀有度样式 */
.horse-card.legendary {
  border-color: #ffb74d;
  background: linear-gradient(180deg, #fff 0%, #fff8e1 100%);
}

.horse-card.epic {
  border-color: #ba68c8;
  background: linear-gradient(180deg, #fff 0%, #f3e5f5 100%);
}

.horse-card.rare {
  border-color: #64b5f6;
  background: linear-gradient(180deg, #fff 0%, #e3f2fd 100%);
}

.horse-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  background: #f5f5f5;
}

/* 马匹图标占位符 */
.horse-icon-wrapper {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0.4) 100%);
  box-shadow: inset 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.horse-icon-wrapper.gold {
  background: linear-gradient(135deg, #ffd700 0%, #ffb300 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 215, 0, 0.4);
}

.horse-icon-wrapper.divine {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}

.horse-icon-wrapper.silver {
  background: linear-gradient(135deg, #c0c0c0 0%, #a0a0a0 100%);
  box-shadow: 0 4rpx 12rpx rgba(192, 192, 192, 0.4);
}

.horse-icon-wrapper.common {
  background: linear-gradient(135deg, #e8e8e8 0%, #d0d0d0 100%);
}

.horse-icon {
  font-size: 72rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0,0,0,0.15));
}

/* 马匹信息区域 */
.horse-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
}

.horse-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.horse-name-en {
  font-size: 22rpx;
  color: #888;
  margin-top: 6rpx;
  display: block;
  font-style: italic;
}

/* 空占位 */
.empty-placeholder {
  padding: 48rpx 24rpx;
  background: linear-gradient(180deg, #fafafa 0%, #f5f5f5 100%);
  border-radius: 16rpx;
  border: 2rpx dashed #ddd;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #bbb;
}

/* ========== 右侧骰子区域 ========== */
.dice-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 160rpx;
}

.dice-wrapper {
  width: 120rpx;
  height: 120rpx;
  padding: 0;
  background: linear-gradient(145deg, #c41e3a, #8b0000);
  border-radius: 20rpx;
  border: 4rpx solid #ffd700;
  box-shadow: 0 6rpx 20rpx rgba(139, 0, 0, 0.4),
              inset 0 2rpx 4rpx rgba(255, 255, 255, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.dice-wrapper::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.15) 0%, transparent 50%);
  pointer-events: none;
}

.dice-wrapper:active {
  transform: scale(0.92);
  box-shadow: 0 3rpx 10rpx rgba(139, 0, 0, 0.5);
}

/* 品级文字 */
.rarity-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  z-index: 1;
}

/* 品级背景色 - 成语稀有度 */
.dice-wrapper.show-rarity.rarity-legendary {
  background: linear-gradient(145deg, #ff9800, #e65100);
  border-color: #ffcc02;
}

.dice-wrapper.show-rarity.rarity-epic {
  background: linear-gradient(145deg, #9c27b0, #6a1b9a);
  border-color: #ce93d8;
}

.dice-wrapper.show-rarity.rarity-rare {
  background: linear-gradient(145deg, #2196f3, #1565c0);
  border-color: #90caf9;
}

.dice-wrapper.show-rarity.rarity-uncommon {
  background: linear-gradient(145deg, #4caf50, #2e7d32);
  border-color: #a5d6a7;
}

.dice-wrapper.show-rarity.rarity-common {
  background: linear-gradient(145deg, #9e9e9e, #616161);
  border-color: #bdbdbd;
}

/* 品级背景色 - 马品级 */
.dice-wrapper.show-rarity.rarity-divine {
  background: linear-gradient(145deg, #ff6b6b, #c41e3a);
  border-color: #ffd700;
  box-shadow: 0 0 20rpx rgba(255, 215, 0, 0.6);
}

.dice-wrapper.show-rarity.rarity-gold {
  background: linear-gradient(145deg, #ffd700, #ff8c00);
  border-color: #fff176;
}

.dice-wrapper.show-rarity.rarity-silver {
  background: linear-gradient(145deg, #c0c0c0, #808080);
  border-color: #e0e0e0;
}

/* 状态提示 */
.dice-status {
  margin-top: 16rpx;
}

.status-text {
  font-size: 22rpx;
  font-weight: bold;
  color: #ffd700;
  text-shadow:
    -1px -1px 0 #c41e3a,
    1px -1px 0 #c41e3a,
    -1px 1px 0 #c41e3a,
    1px 1px 0 #c41e3a,
    0 2px 4px rgba(139, 0, 0, 0.5);
}

.status-text.rolling {
  color: #ffeb3b;
  text-shadow:
    -1px -1px 0 #c41e3a,
    1px -1px 0 #c41e3a,
    -1px 1px 0 #c41e3a,
    1px 1px 0 #c41e3a,
    0 0 10px rgba(255, 235, 59, 0.6);
  animation: pulse 0.5s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 费用提示 */
.cost-hint {
  margin-top: 10rpx;
}

.free-tag {
  font-size: 22rpx;
  font-weight: bold;
  color: #ffd700;
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #2e7d32, #1b5e20);
  border-radius: 16rpx;
  border: 2rpx solid #4caf50;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

.cost-tag {
  font-size: 22rpx;
  font-weight: bold;
  color: #ffd700;
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #d4956a, #c17f4e);
  border-radius: 16rpx;
  border: 2rpx solid #e8a87c;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

/* ========== 付费确认弹窗 ========== */
.confirm-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.confirm-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.confirm-content {
  position: relative;
  width: 560rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.15);
}

.confirm-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.confirm-desc {
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}

.confirm-balance {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

.confirm-btns {
  display: flex;
  margin-top: 36rpx;
  gap: 20rpx;
}

.confirm-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.confirm-btn:active {
  transform: scale(0.96);
}

.confirm-btn.cancel {
  background: linear-gradient(135deg, #f5f5f5 0%, #eeeeee 100%);
  color: #666;
  border: 1rpx solid #ddd;
}

.confirm-btn.ok {
  background: linear-gradient(135deg, #d4956a 0%, #c17f4e 100%);
  color: #fff;
  box-shadow: 0 4rpx 15rpx rgba(193, 127, 78, 0.3);
}
