/* 邀请好友页面样式 */
/* 奶油渐变风格 */
page {
  background: linear-gradient(180deg, #FFF8F0 0%, #FFF5EB 50%, #FFFAF5 100%);
}

.container {
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 顶部横幅 */
.banner {
  background: linear-gradient(135deg, #E8B686 0%, #D4956A 100%);
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(232, 182, 134, 0.4);
}

.banner-content {
  flex: 1;
}

.banner-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
  display: block;
  margin-bottom: 12rpx;
}

.banner-desc {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
}

.banner-icon {
  font-size: 64rpx;
  color: #fff;
  text-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2);
}

.banner-icon-img {
  width: 80rpx;
  height: 80rpx;
  filter: drop-shadow(0 4rpx 12rpx rgba(0,0,0,0.2));
}

/* 统计卡片 */
.stats-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  line-height: 1.2;
}

.stat-value.highlight {
  color: #E8B686;
}

.stat-label {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
  white-space: nowrap;
  text-align: center;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: #f0f0f0;
}

/* 奖励卡片 */
.reward-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.reward-header {
  margin-bottom: 24rpx;
}

.reward-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.reward-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.reward-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.reward-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.reward-icon-wrap {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.reward-icon-img {
  width: 40rpx;
  height: 40rpx;
}

.reward-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.reward-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.reward-desc {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.reward-points {
  font-size: 28rpx;
  font-weight: 600;
  color: #E8B686;
}

.claim-section {
  margin-top: 24rpx;
}

.claim-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #E8B686 0%, #D4956A 100%);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(232, 182, 134, 0.4);
}

/* 邀请方式 */
.invite-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

/* 横向流程图 */
.invite-flow {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  margin-bottom: 24rpx;
}

.flow-step {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.flow-icon-wrap {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #FFF5EB 0%, #FFF0E0 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.flow-icon {
  font-size: 36rpx;
}

.flow-icon-img {
  width: 40rpx;
  height: 40rpx;
}

.flow-title {
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
  white-space: nowrap;
  text-align: center;
}

.flow-desc {
  font-size: 20rpx;
  color: #999;
  white-space: nowrap;
  text-align: center;
}

.flow-arrow {
  font-size: 32rpx;
  color: #E8B686;
  margin: 0 8rpx;
  margin-bottom: 40rpx;
}

.flow-arrow-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 4rpx;
  margin-bottom: 40rpx;
}

.flow-arrow-img {
  width: 28rpx;
  height: 28rpx;
}

.share-main-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #E8B686 0%, #D4956A 100%);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(232, 182, 134, 0.4);
}

.share-main-btn text {
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
  white-space: nowrap;
}

.share-main-btn::after {
  display: none;
}

/* 规则说明 */
.rules-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.rules-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.rule-item {
  display: flex;
  align-items: flex-start;
}

.rule-num {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #FFF5EB;
  color: #E8B686;
  font-size: 24rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.rule-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 邀请记录 */
.records-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
}

.records-list {
  display: flex;
  flex-direction: column;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.record-item:last-child {
  border-bottom: none;
}

.record-avatar-wrap {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #f5f7fa;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.record-avatar-icon {
  font-size: 32rpx;
}

.record-avatar-img {
  width: 44rpx;
  height: 44rpx;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-name {
  font-size: 28rpx;
  color: #333;
}

.record-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.record-points {
  font-size: 28rpx;
  font-weight: 600;
  color: #4caf50;
}
