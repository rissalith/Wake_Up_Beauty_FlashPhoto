<!-- 邀请好友页面 - 醒币奖励版 -->
<view class="container">
  <!-- 顶部横幅 -->
  <view class="banner">
    <view class="banner-content">
      <view class="banner-title">{{lang.invite_title || '邀请好友 一起省钱'}}</view>
      <view class="banner-desc">{{lang.invite_desc || '每邀请1位好友，双方各得20醒币'}}</view>
    </view>
    <image class="banner-icon-img" src="/images/invite-gift.svg" mode="aspectFit"></image>
  </view>

  <!-- 统计卡片 -->
  <view class="stats-card">
    <view class="stat-item">
      <text class="stat-value">{{inviteCount}}</text>
      <text class="stat-label">{{lang.invite_invited || '已邀请'}}</text>
    </view>
    <view class="stat-divider"></view>
    <view class="stat-item">
      <text class="stat-value">{{earnedPoints}}</text>
      <text class="stat-label">{{lang.invite_earnedPoints || '获得醒币'}}</text>
    </view>
    <view class="stat-divider"></view>
    <view class="stat-item">
      <text class="stat-value highlight">{{pendingPoints}}</text>
      <text class="stat-label">{{lang.invite_pending || '待领取'}}</text>
    </view>
  </view>

  <!-- 邀请方式 -->
  <view class="invite-section">
    <view class="section-title">{{lang.invite_method || '邀请方式'}}</view>

    <view class="invite-flow">
      <view class="flow-step">
        <view class="flow-icon-wrap">
          <image class="flow-icon-img" src="/images/invite-upload.svg" mode="aspectFit"></image>
        </view>
        <text class="flow-title">{{lang.invite_step1 || '分享小程序'}}</text>
        <text class="flow-desc">{{lang.invite_step1Desc || '发送给好友'}}</text>
      </view>
      <view class="flow-arrow-wrap">
        <image class="flow-arrow-img" src="/images/invite-arrow.svg" mode="aspectFit"></image>
      </view>
      <view class="flow-step">
        <view class="flow-icon-wrap">
          <image class="flow-icon-img" src="/images/invite-user.svg" mode="aspectFit"></image>
        </view>
        <text class="flow-title">{{lang.invite_step2 || '好友点击'}}</text>
        <text class="flow-desc">{{lang.invite_step2Desc || '进入小程序'}}</text>
      </view>
      <view class="flow-arrow-wrap">
        <image class="flow-arrow-img" src="/images/invite-arrow.svg" mode="aspectFit"></image>
      </view>
      <view class="flow-step">
        <view class="flow-icon-wrap">
          <image class="flow-icon-img" src="/images/invite-success.svg" mode="aspectFit"></image>
        </view>
        <text class="flow-title">{{lang.invite_step3 || '完成注册'}}</text>
        <text class="flow-desc">{{lang.invite_step3Desc || '双方获得奖励'}}</text>
      </view>
    </view>

    <button class="share-main-btn" open-type="share">
      <text>{{lang.invite_shareNow || '立即邀请好友'}}</text>
    </button>
  </view>

  <!-- 规则说明 -->
  <view class="rules-section">
    <view class="section-title">{{lang.invite_rules || '活动规则'}}</view>
    <view class="rules-list">
      <view class="rule-item">
        <text class="rule-num">1</text>
        <text class="rule-text">{{lang.invite_rule1 || '每成功邀请1位好友完成注册，您和好友各获得20醒币'}}</text>
      </view>
      <view class="rule-item">
        <text class="rule-num">2</text>
        <text class="rule-text">{{lang.invite_rule2 || '分享图片到微信好友/朋友圈，每日最多可获得30醒币'}}</text>
      </view>
      <view class="rule-item">
        <text class="rule-num">3</text>
        <text class="rule-text">{{lang.invite_rule3 || '醒币可用于小程序内所有服务消费'}}</text>
      </view>
      <view class="rule-item">
        <text class="rule-num">4</text>
        <text class="rule-text">{{lang.invite_rule4 || '本活动最终解释权归醒美闪图所有'}}</text>
      </view>
    </view>
  </view>

  <!-- 邀请记录 -->
  <view class="records-section" wx:if="{{inviteRecords.length > 0}}">
    <view class="section-title">{{lang.invite_records || '邀请记录'}}</view>
    <view class="records-list">
      <view class="record-item" wx:for="{{inviteRecords}}" wx:key="index">
        <view class="record-avatar-wrap">
          <image class="record-avatar-img" src="/images/default-avatar.svg" mode="aspectFit"></image>
        </view>
        <view class="record-info">
          <text class="record-name">{{item.name || (lang.invite_friend || '好友') + (index + 1)}}</text>
          <text class="record-time">{{item.time}}</text>
        </view>
        <text class="record-points">+{{item.reward_points || 20}}{{lang.pointsUnit || '醒币'}}</text>
      </view>
    </view>
  </view>
</view>
