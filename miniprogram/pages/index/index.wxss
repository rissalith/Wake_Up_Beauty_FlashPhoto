/* 醒美闪图 - 主页面样式 */
/* 奶油渐变风格配色 */
page {
  background: linear-gradient(180deg, #FFF8F0 0%, #FFF5EB 50%, #FFFAF5 100%);
}

.page-container {
  min-height: 100vh;
}

/* 自定义导航栏 - 奶油渐变 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: linear-gradient(135deg, #F5D0A9 0%, #E8B686 100%);
  z-index: 999;
}

.nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 100rpx;
  position: relative;
}

.nav-logo {
  width: 48rpx;
  height: 48rpx;
  margin-right: 12rpx;
  border-radius: 8rpx;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #fff;
  display: none;
}

.nav-title-img {
  height: 100rpx;
  position: relative;
}

/* 标题图片容器 */
.nav-title-wrap {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

/* 导航栏语言切换控件 */
.nav-lang-switch {
  position: absolute;
  left: 24rpx;
  top: 0;
  height: 44px;
  display: flex;
  align-items: center;
  z-index: 10;
}

.lang-switch-track {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 4rpx;
  position: relative;
}

.lang-switch-indicator {
  position: absolute;
  width: 56rpx;
  height: 40rpx;
  background: #fff;
  border-radius: 16rpx;
  transition: transform 0.25s ease;
  z-index: 0;
  left: 4rpx;
}

.lang-switch-indicator.pos-0 {
  transform: translateX(0);
}

.lang-switch-indicator.pos-1 {
  transform: translateX(60rpx);
}

/* 两选项模式 */
.lang-switch-track.two-options .lang-switch-indicator.pos-1 {
  transform: translateX(60rpx);
}

.lang-switch-option {
  width: 56rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  position: relative;
  z-index: 1;
  transition: color 0.2s;
}

.lang-switch-option.active {
  color: #C68B4D;
  font-weight: 600;
}

.container {
  padding: 20rpx;
  padding-top: 40rpx;
  padding-bottom: 180rpx;
  position: relative;
  z-index: 10;
}

/* 头部 Banner 轮播 - 铺满式 */
.header-banner-full {
  position: fixed;
  left: 0;
  right: 0;
  height: 340rpx;
  z-index: 1;
  overflow: hidden;
}

.banner-swiper-full {
  width: 100%;
  height: 100%;
}

.banner-bg-full {
  width: 100%;
  height: 100%;
}

/* 底部渐变遮罩 - 与页面背景融合 */
.banner-gradient-overlay {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 160rpx;
  background: linear-gradient(
    to bottom,
    transparent 0%,
    rgba(255, 245, 235, 0.4) 25%,
    rgba(255, 245, 235, 0.75) 50%,
    rgba(255, 245, 235, 0.92) 75%,
    #FFF5EB 100%
  );
  pointer-events: none;
  z-index: 5;
}

/* Banner轮播指示点 - 铺满式 */
.banner-dots-full {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  gap: 12rpx;
  z-index: 10;
}

.banner-dot {
  width: 12rpx;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 6rpx;
  transition: all 0.3s ease;
}

.banner-dot.active {
  width: 28rpx;
  background: #fff;
}

/* 保留旧样式以兼容 */
.header-banner {
  border-radius: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 32rpx;
  position: relative;
  overflow: hidden;
  height: 280rpx;
}

.banner-swiper {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.banner-bg {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.banner-dots {
  position: absolute;
  bottom: 16rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  gap: 12rpx;
  z-index: 10;
}

/* 服务列表区块 */
.service-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx 0;
  margin-bottom: 24rpx;
  overflow: hidden;
  position: relative;
}

/* 左右滑动暗示渐变 */
.service-section::before,
.service-section::after {
  content: '';
  position: absolute;
  top: 80rpx;
  bottom: 0;
  width: 40rpx;
  z-index: 10;
  pointer-events: none;
}

.service-section::before {
  left: 0;
  background: linear-gradient(to right, rgba(255,255,255,0.9) 0%, transparent 100%);
}

.service-section::after {
  right: 0;
  background: linear-gradient(to left, rgba(255,255,255,0.9) 0%, transparent 100%);
}

.service-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  margin-bottom: 16rpx;
}

.service-section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 分页指示点 */
.swiper-dots {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.swiper-dots .dot {
  width: 12rpx;
  height: 12rpx;
  background: #e0e0e0;
  border-radius: 6rpx;
  transition: all 0.3s ease;
}

.swiper-dots .dot.active {
  width: 32rpx;
  background: linear-gradient(135deg, #E8B686 0%, #D4956A 100%);
}

/* 底部分页指示器 */
.swiper-dots-bottom {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 12rpx 0 8rpx;
}

.swiper-dots-bottom .dot {
  width: 12rpx;
  height: 12rpx;
  background: #e0e0e0;
  border-radius: 6rpx;
  transition: all 0.3s ease;
}

.swiper-dots-bottom .dot.active {
  width: 32rpx;
  background: linear-gradient(135deg, #E8B686 0%, #D4956A 100%);
}

/* Swiper 样式 */
.service-swiper {
  height: 480rpx;
}

/* 服务列表 */
.service-list {
  background: transparent;
  border-radius: 0;
  padding: 0 24rpx;
  margin-bottom: 0;
}

.service-card {
  display: flex;
  align-items: center;
  padding: 20rpx 20rpx;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.service-card:active {
  background: #f5f7fa;
}

/* hover效果 - 点击反馈 */
.service-card-hover {
  background: rgba(232, 182, 134, 0.1);
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(232, 182, 134, 0.2);
}

.service-card.disabled {
  opacity: 0.6;
}

.service-card.disabled:active {
  background: transparent;
}

/* 禁用状态不显示hover效果 */
.service-card.disabled.service-card-hover {
  transform: none;
  background: transparent;
  box-shadow: none;
}

.service-icon-wrap {
  width: 120rpx;
  height: 120rpx;
  border-radius: 28rpx;
  margin-right: 28rpx;
  flex-shrink: 0;
  overflow: hidden;
}

.service-icon-wrap.coming {
  opacity: 0.6;
}

.service-icon {
  width: 100%;
  height: 100%;
}

.service-info {
  flex: 1;
  min-width: 0;
}

.service-title-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.service-title-row .service-title {
  margin-bottom: 0;
  margin-right: 12rpx;
}

.service-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.service-desc {
  font-size: 24rpx;
  color: #999;
  display: block;
  line-height: 1.5;
}

.coming-tag {
  display: inline-block;
  font-size: 20rpx;
  color: #999;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

/* 更多场景卡片 */
.service-card.more-coming {
  opacity: 0.8;
}

.service-icon-wrap.more {
  background: linear-gradient(135deg, #f5f7fa 0%, #e8eaed 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.more-icon {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.more-dot {
  width: 12rpx;
  height: 12rpx;
  background: #999;
  border-radius: 50%;
}

/* 公告栏 */
.announcement-bar {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
  padding: 20rpx 32rpx;
  margin: 0 24rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 152, 0, 0.15);
}

.announcement-text {
  font-size: 26rpx;
  color: #E65100;
  line-height: 1.5;
}

/* 加载中占位 */
.service-loading {
  padding: 0 24rpx;
}

.loading-placeholder {
  display: flex;
  align-items: center;
  padding: 28rpx;
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.03);
}

.placeholder-icon {
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  border-radius: 24rpx;
  margin-right: 24rpx;
  animation: shimmer 1.5s infinite;
}

.placeholder-text {
  flex: 1;
  height: 80rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  border-radius: 12rpx;
  animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* 滑动提示 - 已移除文字提示，改用两侧渐变暗示 */

.service-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.4;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 区块 */
.section {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

/* 特色功能 */
.feature-section {
  margin-bottom: 24rpx;
  border-radius: 20rpx;
  overflow: hidden;
  max-height: 340rpx;
}

.feature-banner-img {
  width: 100%;
  display: block;
  margin-bottom: -20rpx;
}

.feature-list {
  display: flex;
  justify-content: space-between;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.feature-icon {
  width: 56rpx;
  height: 56rpx;
}

.feature-name {
  font-size: 24rpx;
  color: #666;
}

/* 价格说明 */
.price-info {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(245,208,169,0.2) 0%, rgba(232,182,134,0.2) 100%);
  border-radius: 16rpx;
}

.price-icon {
  width: 36rpx;
  height: 36rpx;
}

.price-text {
  font-size: 26rpx;
  color: #C68B4D;
  font-weight: 500;
}

/* 隐私政策轻提示弹窗 - 居中显示 */
.privacy-toast-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.privacy-toast {
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
}

.privacy-toast-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  display: block;
  margin-bottom: 32rpx;
}

.privacy-toast-btns {
  display: flex;
  gap: 20rpx;
}

.privacy-toast-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border-radius: 44rpx;
}

.privacy-toast-btn.agree {
  background: linear-gradient(135deg, #F5D0A9 0%, #E8B686 100%);
  color: #fff;
  font-weight: 500;
}

.privacy-toast-btn.delay {
  background: #FFF5EB;
  color: #666;
}

/* 场景卡片高亮效果 - 泛红光 */
.service-card.highlighted {
  position: relative;
  animation: highlight-glow 2s ease-in-out infinite;
  box-shadow: 0 0 15rpx var(--highlight-color, #ff6b6b);
  border: 2rpx solid var(--highlight-color, #ff6b6b);
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.05) 0%, rgba(255, 107, 107, 0.02) 100%);
}

.service-card.highlighted::before {
  content: '';
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  right: -4rpx;
  bottom: -4rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, var(--highlight-color, #ff6b6b), transparent);
  opacity: var(--highlight-intensity, 0.3);
  z-index: -1;
  animation: highlight-pulse 2s ease-in-out infinite;
}

@keyframes highlight-glow {
  0%, 100% {
    box-shadow: 0 0 10rpx var(--highlight-color, #ff6b6b);
  }
  50% {
    box-shadow: 0 0 25rpx var(--highlight-color, #ff6b6b);
  }
}

@keyframes highlight-pulse {
  0%, 100% {
    opacity: calc(var(--highlight-intensity, 0.3) * 0.5);
  }
  50% {
    opacity: var(--highlight-intensity, 0.3);
  }
}
