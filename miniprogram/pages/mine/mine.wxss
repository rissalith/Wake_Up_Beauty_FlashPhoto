  height: 100%;
}

/* 默认头像样式 */
.default-avatar {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #F5D0A9 0%, #E8B686 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.default-avatar-icon {
  width: 60rpx;
  height: 60rpx;
  position: relative;
}

.default-avatar-icon::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 28rpx;
  height: 28rpx;
  background: #fff;
  border-radius: 50%;
}

.default-avatar-icon::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 28rpx;
  background: #fff;
  border-radius: 28rpx 28rpx 0 0;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-name.login-text {
  color: #E8B686;
}

/* 头像按钮样式 */
.avatar-btn {
  width: 120rpx !important;
  height: 120rpx !important;
  min-width: 120rpx !important;
  padding: 0 !important;
  margin: 0 !important;
  margin-right: 32rpx !important;
  border: none !important;
  background: transparent !important;
  line-height: 1 !important;
  border-radius: 50% !important;
  overflow: hidden !important;
  flex-shrink: 0;
}

.avatar-btn::after {
  display: none;
}

/* 昵称输入框样式 */
.user-name-input {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
