  border-radius: 10rpx 10rpx 0 0;
}

/* 用户协议图标 - 文档图标 */
.terms-icon {
  position: relative;
}

.terms-icon::before {
  content: '';
  position: absolute;
  top: 2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 22rpx;
  height: 28rpx;
  border: 4rpx solid #E8B686;
  border-radius: 4rpx;
  box-sizing: border-box;
}

.terms-icon::after {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 10rpx;
  height: 4rpx;
  background: #E8B686;
  box-shadow: 0 6rpx 0 #E8B686;
}

/* 语言图标 */
.language-icon {
  position: relative;
  border: 4rpx solid #E8B686;
  border-radius: 50%;
  box-sizing: border-box;
}

.language-icon::before {
  content: 'A';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 16rpx;
  font-weight: bold;
  color: #E8B686;
  line-height: 1;
}

/* 分组标题 */
.section-title {
  font-size: 28rpx;
  color: #999;
  padding: 0 8rpx;
  margin-bottom: 16rpx;
}

/* 功能菜单 */
.menu-section {
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 36rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-btn {
  background: transparent;
  line-height: normal;
  text-align: left;
}

.menu-btn::after {
  display: none;
}

.menu-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 24rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-value {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 隐私政策已确认标签 */
.privacy-tag {
  font-size: 22rpx;
  color: #4CAF50;
  background: rgba(76, 175, 80, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 8rpx;
}

/* 隐私政策状态 */
.privacy-status {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-right: 8rpx;
}

.privacy-check {
  font-size: 24rpx;
  color: #4CAF50;
}

.privacy-time {
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 退出登录菜单项 */
.logout-item {
  border-top: 16rpx solid #f5f7fa;
}

.logout-text-menu {
  color: #e74c3c !important;
}

/* 退出图标 */
.logout-icon {
  position: relative;
  width: 100%;
  height: 100%;
}

.logout-icon::before {
  content: '';
  position: absolute;
  left: 4rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 20rpx;
  height: 20rpx;
  border: 4rpx solid #e74c3c;
  border-right: none;
  border-radius: 4rpx 0 0 4rpx;
}

.logout-icon::after {
  content: '';
  position: absolute;
  right: 4rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 12rpx;
  height: 4rpx;
  background: #e74c3c;
  box-shadow: -4rpx -6rpx 0 0 #e74c3c, -4rpx 6rpx 0 0 #e74c3c;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx;
}

.version-text {
  font-size: 24rpx;
  color: #ccc;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-mask-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
}

.modal-content {
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

.nickname-modal {
  /* 确保昵称弹窗在上层 */
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  font-size: 40rpx;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 32rpx;
}

.modal-input {
  width: 100%;
  height: 88rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.modal-btn.cancel {
  color: #999;
  border-right: 1rpx solid #f0f0f0;
}

.modal-btn.confirm {
  color: #E8B686;
  font-weight: 500;
}

/* 验证码输入行 */
.verify-code-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 24rpx;
}

.code-input {
  flex: 1;
}

.send-code-btn {
  min-width: 180rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #E8B686 0%, #D4956A 100%);
  color: #fff;
  font-size: 26rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
}

.send-code-btn.disabled {
  background: #ccc;
}

/* 个人资料弹窗 */
.profile-item {
  padding: 24rpx 0;
}

.profile-item:first-child {
  padding-top: 0;
}

.profile-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.avatar-picker {
  width: 160rpx;
  height: 160rpx;
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.avatar-picker::after {
  display: none;
}

.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid #E8B686;
}

.avatar-tip {
  font-size: 22rpx;
  color: #E8B686;
}

.profile-input {
  width: 100%;
  height: 80rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
