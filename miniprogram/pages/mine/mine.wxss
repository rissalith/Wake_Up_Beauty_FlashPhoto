}

.user-id {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 退出登录按钮 */
.logout-btn {
  padding: 12rpx 24rpx;
  border: 1rpx solid #e74c3c;
  border-radius: 24rpx;
  flex-shrink: 0;
}

.logout-text {
  font-size: 24rpx;
  color: #e74c3c;
}

/* 绑定邮箱 */
.user-email {
  display: flex;
  align-items: center;
}

.email-icon-wrap {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.email-icon-css {
  width: 100%;
  height: 100%;
  border: 3rpx solid #E8B686;
  border-radius: 4rpx;
  box-sizing: border-box;
  position: relative;
}

.email-icon-css::before {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 10rpx solid #E8B686;
}

.email-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.email-text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
}

.email-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 语言切换区域 */
.language-switch-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.language-label {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 30rpx;
  color: #333;
}

.language-label .language-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 三档切换开关 */
.language-switch {
  flex-shrink: 0;
}

.switch-track {
  display: flex;
  align-items: center;
  background: #f0f0f0;
  border-radius: 24rpx;
  padding: 4rpx;
  position: relative;
}

.switch-indicator {
  position: absolute;
  width: 64rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #E8B686 0%, #D4956A 100%);
  border-radius: 20rpx;
  transition: transform 0.25s ease;
  z-index: 0;
  left: 4rpx;
}

.switch-indicator.pos-0 {
  transform: translateX(0);
}

.switch-indicator.pos-1 {
  transform: translateX(68rpx);
}

.switch-indicator.pos-2 {
  transform: translateX(136rpx);
}

.switch-option {
  width: 64rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
  position: relative;
  z-index: 1;
  transition: color 0.2s;
}

.switch-option.active {
  color: #fff;
  font-weight: 500;
}

/* 功能卡片区域 */
.card-section {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.feature-card {
  flex: 1;
  padding: 32rpx 24rpx;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
}

/* 邀请有礼卡片 - 炫彩奶油风格 */
.invite-card {
  background: linear-gradient(135deg, #fdfbfb 0%, #f9f5f0 50%, #fef9f3 100%);
  box-shadow:
    0 4rpx 20rpx rgba(255, 182, 193, 0.2),
    0 8rpx 40rpx rgba(255, 218, 185, 0.15),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.8);
}

/* 星星装饰 */
.invite-star-decoration {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  font-size: 32rpx;
  color: #FFD700;
  font-weight: 400;
  z-index: 2;
  text-shadow: 0 2rpx 4rpx rgba(255, 215, 0, 0.3);
  animation: starTwinkle 2s ease-in-out infinite;
}

@keyframes starTwinkle {
  0%, 100% {
    opacity: 0.8;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.1);
  }
}

/* 流光效果 */
.card-shimmer {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent 20%,
    rgba(255, 182, 193, 0.15) 30%,
    rgba(255, 218, 185, 0.2) 40%,
    rgba(173, 216, 230, 0.15) 50%,
    rgba(221, 160, 221, 0.1) 60%,
    transparent 70%
  );
  animation: shimmer 3s infinite linear;
  z-index: 0;
  pointer-events: none;
}

@keyframes shimmer {
  0% { transform: translateX(-100%) rotate(45deg); }
  100% { transform: translateX(100%) rotate(45deg); }
}

/* 光斑效果 */
.card-glow {
  position: absolute;
  top: -30%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(255, 182, 193, 0.3) 0%, rgba(255, 218, 185, 0.2) 40%, transparent 70%);
  animation: glow 4s ease-in-out infinite;
  z-index: 0;
  pointer-events: none;
}

@keyframes glow {
  0%, 100% {
    transform: translate(0, 0) scale(1);
    opacity: 0.4;
  }
  50% {
    transform: translate(-20rpx, 20rpx) scale(1.2);
    opacity: 0.6;
  }
}

.order-card {
  background: #fff;
}

/* 卡片图标容器 */
.card-icon-wrap {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
  position: relative;
  z-index: 1;
  flex-shrink: 0;
}

/* 卡片文字容器 */
