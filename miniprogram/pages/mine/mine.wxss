  position: relative;
}

.privacy-icon::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 28rpx;
  height: 20rpx;
  border: 4rpx solid #E8B686;
  border-radius: 4rpx;
  box-sizing: border-box;
}

