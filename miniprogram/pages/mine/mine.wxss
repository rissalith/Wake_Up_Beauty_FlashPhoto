/* 我的页面样式 */
/* 奶油渐变风格 */
page {
  background: linear-gradient(180deg, #FFF8F0 0%, #FFF5EB 50%, #FFFAF5 100%);
}

/* 悬浮进度条 */
.floating-progress {
  position: fixed;
  top: 0;
  left: 50%;
  transform: translateX(-50%) translateY(-100%);
  z-index: 999;
  padding-top: env(safe-area-inset-top);
  transition: transform 0.3s ease;
}

.floating-progress.show {
  transform: translateX(-50%) translateY(0);
}

.floating-progress-inner {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: linear-gradient(135deg, #F5D0A9 0%, #E8B686 100%);
  padding: 16rpx 32rpx;
  border-radius: 0 0 32rpx 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(232, 182, 134, 0.4);
}

.progress-spinner {
  width: 28rpx;
  height: 28rpx;
  border: 3rpx solid rgba(255,255,255,0.3);
  border-top-color: #fff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.progress-text {
  font-size: 26rpx;
  color: #fff;
  font-weight: 500;
  white-space: nowrap;
}

.progress-arrow {
  font-size: 32rpx;
  color: rgba(255,255,255,0.8);
  margin-left: 8rpx;
}

.container {
  padding: 40rpx 32rpx;
  padding-bottom: 180rpx;
}

/* 用户信息区域容器 */
.user-section-wrap {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

/* 醒币余额卡片 */
.points-card {
  position: relative;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(232, 182, 134, 0.4);
  overflow: hidden;
}

/* 流光渐变背景 */
.points-shimmer-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    135deg,
    #E8B686 0%,
    #D4956A 25%,
    #E8B686 50%,
    #C9865A 75%,
    #D4956A 100%
  );
  background-size: 200% 200%;
  animation: pointsGradient 4s ease-in-out infinite;
  z-index: 0;
}

@keyframes pointsGradient {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

/* 流光扫过效果 */
.points-shimmer-overlay {
  position: absolute;
  top: 0;
  left: -100%;
  width: 50%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0) 30%,
    rgba(255, 255, 255, 0.4) 50%,
    rgba(255, 255, 255, 0) 70%,
    transparent 100%
  );
  animation: pointsShimmer 3s ease-in-out infinite;
  z-index: 1;
}

@keyframes pointsShimmer {
  0% {
    left: -100%;
  }
  100% {
    left: 200%;
  }
}

/* 金色闪光点 */
.points-sparkles {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 2;
}

.points-sparkle {
  position: absolute;
  width: 6rpx;
  height: 6rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  box-shadow: 0 0 8rpx 2rpx rgba(255, 215, 0, 0.6);
  animation: pointsSparkle 2.5s ease-in-out infinite;
}

.sparkle-a {
  top: 20%;
  left: 15%;
  animation-delay: 0s;
}

.sparkle-b {
  top: 60%;
  right: 20%;
  animation-delay: 0.8s;
}

.sparkle-c {
  top: 35%;
  left: 60%;
  animation-delay: 1.6s;
}

@keyframes pointsSparkle {
  0%, 100% {
    transform: scale(0.5);
    opacity: 0.3;
  }
  50% {
    transform: scale(1.5);
    opacity: 1;
  }
}

.points-main {
  position: relative;
  z-index: 3;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

