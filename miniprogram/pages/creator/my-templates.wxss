/* pages/creator/my-templates.wxss */
/* 我的模板页面样式 - 网格布局 */

.my-templates {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 44px;
  padding: 0 16px;
}

.nav-back {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.back-icon {
  width: 24px;
  height: 24px;
}

.nav-title {
  font-size: 17px;
  font-weight: 600;
  color: #333;
}

.nav-action {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.add-icon {
  width: 24px;
  height: 24px;
}

/* 统计头部 */
.stats-header {
  display: flex;
  justify-content: space-around;
  padding: 24px 20px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 28px;
  font-weight: 600;
  color: #fff;
}

.stats-value.active {
  color: #7fff7f;
}

.stats-value.reviewing {
  color: #ffeb3b;
}

.stats-value.rejected {
  color: #ff7f7f;
}

.stats-label {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 4px;
}

/* 搜索栏 */
.search-bar {
  background: #fff;
  padding: 10px 16px;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-input-wrap {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 20px;
  padding: 8px 12px;
  transition: all 0.2s;
}

.search-input-wrap.focused {
  background: #fff;
  box-shadow: 0 0 0 2px rgba(102, 126, 234, 0.2);
}

.search-icon {
  width: 18px;
  height: 18px;
  margin-right: 8px;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  font-size: 14px;
  color: #333;
  height: 24px;
  line-height: 24px;
}

.search-placeholder {
  color: #999;
}

.search-clear {
  padding: 4px;
}

.clear-icon {
  width: 18px;
  height: 18px;
  opacity: 0.5;
}

/* 状态筛选标签 */
.status-scroll {
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.status-list {
  display: flex;
  padding: 10px 12px;
  white-space: nowrap;
}

.status-item {
  flex-shrink: 0;
  padding: 6px 16px;
  margin-right: 8px;
  font-size: 14px;
  color: #666;
  background: #f5f5f5;
  border-radius: 16px;
  transition: all 0.2s;
}

.status-item.active {
  color: #fff;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.status-name {
  font-size: 14px;
}

/* 模板网格列表 */
.template-scroll {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 260px; /* 根据头部高度调整 */
  background: #f5f5f5;
}

.template-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 12px 8px;
  padding-bottom: 80px;
}

.template-card {
  width: calc(50% - 8px);
  margin: 4px;
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.card-cover-wrap {
  position: relative;
  width: 100%;
  padding-top: 100%; /* 1:1 正方形比例 */
}

.card-cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}

/* 状态标签 */
.card-status {
  position: absolute;
  top: 8px;
  left: 8px;
  padding: 2px 8px;
  font-size: 10px;
  border-radius: 4px;
  color: #fff;
}

.card-status.draft {
  background: #999;
}

.card-status.reviewing,
.card-status.pending {
  background: #fa8c16;
}

.card-status.active {
  background: #52c41a;
}

.card-status.rejected {
  background: #ff4d4f;
}

.card-status.offline {
  background: #999;
}

.card-use-count {
  position: absolute;
  bottom: 8px;
  right: 8px;
  display: flex;
  align-items: center;
  padding: 2px 8px;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 10px;
  color: #fff;
  font-size: 11px;
}

.use-icon {
  width: 12px;
  height: 12px;
  margin-right: 2px;
}

.card-info {
  padding: 10px;
}

.card-name {
  font-size: 14px;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 4px;
}

.card-price {
  font-size: 12px;
  color: #ff9500;
  font-weight: 500;
}

/* 拒绝原因 */
.reject-reason {
  padding: 8px 10px;
  background: #fff2f0;
  border-top: 1rpx solid #ffccc7;
}

.reason-text {
  font-size: 11px;
  color: #ff4d4f;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 操作按钮 */
.card-actions {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  flex: 1;
  text-align: center;
  padding: 10px 4px;
  font-size: 12px;
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.action-btn:last-child {
  border-right: none;
}

.action-btn.full {
  flex: 1;
}

.action-btn.edit {
  color: #667eea;
}

.action-btn.submit {
  color: #52c41a;
}

.action-btn.offline {
  color: #fa8c16;
}

.action-btn.delete {
  color: #ff4d4f;
}

.action-btn.disabled {
  color: #ccc;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80px 0;
}

.empty-icon {
  width: 120px;
  height: 120px;
  margin-bottom: 16px;
  opacity: 0.5;
}

.empty-text {
  font-size: 14px;
  color: #999;
  margin-bottom: 16px;
}

.empty-btn {
  padding: 10px 24px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 14px;
  border-radius: 20px;
}

.empty-btn.secondary {
  background: #f5f5f5;
  color: #666;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60px 0;
  color: #999;
  font-size: 13px;
}

.loading-spinner {
  width: 32px;
  height: 32px;
  border: 3px solid #f0f0f0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 12px;
}

.loading-spinner.small {
  width: 20px;
  height: 20px;
  border-width: 2px;
  margin-bottom: 8px;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 加载更多 */
.load-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px 0;
  color: #999;
  font-size: 13px;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 20px 0;
  font-size: 13px;
  color: #ccc;
}

/* 悬浮创建按钮 */
.float-create-btn {
  position: fixed;
  right: 20px;
  bottom: calc(40px + env(safe-area-inset-bottom));
  width: 56px;
  height: 56px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 16px rgba(102, 126, 234, 0.4);
  z-index: 99;
}

.float-icon {
  width: 28px;
  height: 28px;
}

/* 底部安全区 */
.safe-bottom {
  height: calc(env(safe-area-inset-bottom) + 80px);
}
