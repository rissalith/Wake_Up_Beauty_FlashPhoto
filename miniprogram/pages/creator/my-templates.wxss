/* pages/creator/my-templates.wxss */
.my-templates {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 统计头部 */
.stats-header {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #fff;
}

.stats-value.active {
  color: #7fff7f;
}

.stats-value.reviewing {
  color: #ffeb3b;
}

.stats-value.rejected {
  color: #ff7f7f;
}

.stats-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

/* Tab 筛选 */
.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  overflow-x: auto;
  white-space: nowrap;
}

.tab {
  flex-shrink: 0;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #667eea;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #667eea;
  border-radius: 2rpx;
}

/* 拖拽提示 */
.drag-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  background: #fff9e6;
  font-size: 24rpx;
  color: #996600;
}

.tip-icon {
  margin-right: 8rpx;
}

/* 模板列表 */
.template-list {
  padding: 20rpx;
}

.template-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s, box-shadow 0.2s;
}

.template-card.dragging {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  z-index: 100;
  opacity: 0.9;
}

/* 拖拽手柄 */
.drag-handle {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  background: #f9f9f9;
  border-bottom: 1rpx solid #eee;
}

.handle-icon {
  font-size: 32rpx;
  color: #ccc;
  letter-spacing: 4rpx;
}

/* 模板内容 */
.template-content {
  display: flex;
  padding: 24rpx;
}

.template-cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  background: #f5f5f5;
}

.template-info {
  flex: 1;
  margin-left: 24rpx;
  min-width: 0;
}

.template-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.template-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.template-meta {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 12rpx;
}

/* 状态标签 */
.status-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  background: #f5f5f5;
  color: #999;
}

.status-tag.draft {
  background: #f0f0f0;
  color: #666;
}

.status-tag.reviewing,
.status-tag.pending {
  background: #fff7e6;
  color: #fa8c16;
}

.status-tag.active {
  background: #f6ffed;
  color: #52c41a;
}

.status-tag.rejected {
  background: #fff2f0;
  color: #ff4d4f;
}

.status-tag.offline {
  background: #f5f5f5;
  color: #999;
}

.points {
  font-size: 24rpx;
  color: #ff9500;
}

.use-count {
  font-size: 24rpx;
  color: #999;
}

/* 拒绝原因 */
.reject-reason {
  margin-top: 12rpx;
  padding: 12rpx;
  background: #fff2f0;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.reason-label {
  color: #ff4d4f;
}

.reason-text {
  color: #666;
}

/* 操作按钮 */
.template-actions {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  font-size: 28rpx;
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.action-btn:last-child {
  border-right: none;
}

.action-btn.edit {
  color: #667eea;
}

.action-btn.submit {
  color: #52c41a;
}

.action-btn.offline {
  color: #fa8c16;
}

.action-btn.delete {
  color: #ff4d4f;
}

.action-btn.disabled {
  color: #ccc;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 32rpx;
}

.empty-btn {
  padding: 20rpx 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 26rpx;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 加载更多 */
.load-more,
.no-more {
  text-align: center;
  padding: 32rpx;
  font-size: 26rpx;
  color: #999;
}

/* 创建按钮 */
.create-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  display: flex;
  align-items: center;
  padding: 24rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.create-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
}
