/* 创作者中心页面样式 */

.page-container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: linear-gradient(135deg, #E8B686 0%, #D4A574 100%);
}

.nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 16px;
}

.nav-title {
  font-size: 18px;
  font-weight: 600;
  color: #fff;
}

/* 页面滚动区域 */
.page-scroll {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  overflow-y: auto;
}

/* 创作者信息卡片 */
.creator-card {
  margin: 12px;
  padding: 20px;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
}

.creator-header {
  display: flex;
  align-items: center;
}

.creator-avatar {
  width: 64px;
  height: 64px;
  border-radius: 50%;
  flex-shrink: 0;
}

.creator-info {
  flex: 1;
  margin-left: 16px;
  min-width: 0;
}

.creator-name-row {
  display: flex;
  align-items: center;
}

.creator-name {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

.level-badge {
  margin-left: 8px;
  padding: 2px 8px;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  border-radius: 10px;
}

.level-text {
  font-size: 11px;
  color: #fff;
  font-weight: 500;
}

.creator-bio {
  margin-top: 6px;
  font-size: 13px;
  color: #999;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 数据统计 */
.stats-row {
  display: flex;
  margin-top: 20px;
  padding-top: 20px;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 20px;
  font-weight: 600;
  color: #333;
}

.stat-value.highlight {
  color: #C68B4D;
}

.stat-label {
  margin-top: 4px;
  font-size: 12px;
  color: #999;
}

/* 收益明细入口 */
.earnings-entry {
  margin: 12px;
  padding: 14px 16px;
  background: #fff;
  border-radius: 12px;
  display: flex;
  align-items: center;
}

.earnings-icon-wrap {
  width: 36px;
  height: 36px;
  border-radius: 8px;
  background: linear-gradient(135deg, #FFF8F0 0%, #FFECD9 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.earnings-icon {
  width: 20px;
  height: 20px;
}

.earnings-text {
  flex: 1;
  margin-left: 12px;
  font-size: 15px;
  color: #333;
}

.earnings-arrow {
  width: 16px;
  height: 16px;
  opacity: 0.4;
}

/* 后台任务入口样式 */
.task-icon-wrap {
  background: linear-gradient(135deg, #f0f4ff 0%, #e8e0ff 100%);
}

.task-badge {
  min-width: 18px;
  height: 18px;
  padding: 0 6px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 9px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8px;
}

.task-badge text {
  font-size: 11px;
  color: #fff;
  font-weight: 500;
}

/* 模板列表区域 */
.templates-section {
  margin: 12px;
  padding: 16px;
  background: #fff;
  border-radius: 16px;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16px;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.view-all {
  display: flex;
  align-items: center;
}

.view-all-text {
  font-size: 13px;
  color: #999;
}

.view-all-arrow {
  width: 14px;
  height: 14px;
  opacity: 0.4;
  margin-left: 4px;
}

/* 横向滚动模板列表 */
.template-scroll {
  width: 100%;
  margin: 0 -16px;
  padding: 0 16px;
  box-sizing: content-box;
}

.template-list-horizontal {
  display: flex;
  gap: 12px;
  padding-right: 16px;
}

/* 模板卡片 */
.template-card {
  width: 140px;
  flex-shrink: 0;
  border-radius: 12px;
  overflow: hidden;
  background: #f9f9f9;
}

.template-card .template-cover {
  width: 140px;
  height: 187px;
  display: block;
}

.template-card-info {
  padding: 10px;
}

.template-card-info .template-name {
  font-size: 14px;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 6px;
}

.template-card-info .template-status {
  display: inline-block;
  padding: 2px 8px;
  border-radius: 4px;
  font-size: 11px;
}

/* 创建模板卡片 */
.template-card.create-card {
  background: linear-gradient(135deg, #FFF8F0 0%, #FFECD9 100%);
  border: 1px dashed rgba(200, 139, 77, 0.3);
}

.create-placeholder {
  width: 140px;
  height: 230px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.create-icon-circle {
  width: 48px;
  height: 48px;
  background: linear-gradient(135deg, #E8B686 0%, #D4A574 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(200, 139, 77, 0.25);
}

.create-icon-circle .create-icon {
  font-size: 24px;
  color: #fff;
  font-weight: 300;
  line-height: 1;
}

.create-text {
  margin-top: 12px;
  font-size: 13px;
  color: #C68B4D;
  font-weight: 500;
}

/* 模板状态样式 */
.template-status.draft {
  background: #f0f0f0;
  color: #999;
}

.template-status.pending,
.template-status.reviewing {
  background: #FFF3E0;
  color: #FF9800;
}

.template-status.active,
.template-status.approved {
  background: #E8F5E9;
  color: #4CAF50;
}

.template-status.rejected {
  background: #FFEBEE;
  color: #F44336;
}

.template-status.offline {
  background: #f0f0f0;
  color: #999;
}

.status-text {
  font-size: 10px;
}

/* 底部安全区 */
.safe-bottom {
  height: calc(env(safe-area-inset-bottom) + 20px);
}

/* 后台任务卡片样式 */
.template-card.task-card {
  background: linear-gradient(135deg, #f0f4ff 0%, #e8e0ff 100%);
  border: 1px solid rgba(102, 126, 234, 0.2);
}

.template-card.task-card.completed {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  border-color: rgba(76, 175, 80, 0.3);
}

.template-card.task-card.failed {
  background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
  border-color: rgba(244, 67, 54, 0.3);
}

.task-card-content {
  width: 140px;
  height: 230px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16px;
  box-sizing: border-box;
}

.task-status-icon {
  width: 32px;
  height: 32px;
  margin-bottom: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.task-icon {
  width: 32px;
  height: 32px;
}

.task-icon.spinning {
  animation: spin 1.5s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.task-title {
  font-size: 13px;
  color: #333;
  text-align: center;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 12px;
  line-height: 1.4;
}

.task-progress-wrap {
  width: 100%;
}

.task-progress-bar {
  width: 100%;
  height: 4px;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 2px;
  overflow: hidden;
}

.task-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 2px;
  transition: width 0.3s ease;
}

.task-progress-text {
  display: block;
  text-align: center;
  font-size: 11px;
  color: #667eea;
  margin-top: 6px;
}

.task-status-text {
  font-size: 12px;
  font-weight: 500;
}

.task-status-text.completed {
  color: #4CAF50;
}

.task-status-text.failed {
  color: #f44336;
}
