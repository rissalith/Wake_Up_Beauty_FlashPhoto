/* 步骤编辑器页面样式 */

.page-container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: linear-gradient(135deg, #E8B686 0%, #D4A574 100%);
}

.nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16px;
}

.nav-back {
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.back-icon {
  width: 24px;
  height: 24px;
}

.nav-title {
  font-size: 17px;
  font-weight: 600;
  color: #fff;
}

.nav-placeholder {
  width: 44px;
}

/* 内容区域 */
.content-area {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 70px;
  overflow-y: auto;
}

/* 区块样式 */
.section {
  margin: 12px;
}

.section-title {
  font-size: 15px;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12px;
}

.required {
  color: #FF6B6B;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12px;
}

/* 类型选择网格 */
.type-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

.type-card {
  padding: 16px;
  background: #fff;
  border-radius: 12px;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.type-card.selected {
  border-color: #C68B4D;
  background: #FFF8F0;
}

.type-name {
  font-size: 14px;
  font-weight: 600;
  color: #333;
  display: block;
}

.type-desc {
  font-size: 12px;
  color: #999;
  margin-top: 4px;
  display: block;
}

/* 表单卡片 */
.form-card {
  background: #fff;
  border-radius: 12px;
  padding: 16px;
}

.form-item {
  margin-bottom: 16px;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-item.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.form-label {
  font-size: 14px;
  color: #333;
  display: block;
  margin-bottom: 8px;
}

.form-item.row .form-label {
  margin-bottom: 0;
}

.form-input {
  width: 100%;
  height: 44px;
  padding: 0 12px;
  background: #f5f5f5;
  border-radius: 8px;
  font-size: 14px;
  box-sizing: border-box;
}

.form-hint {
  font-size: 12px;
  color: #999;
  margin-top: 4px;
  display: block;
}

/* 数字输入 */
.number-input-wrap {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8px;
  padding: 0 12px;
}

.number-input {
  flex: 1;
  height: 44px;
  font-size: 14px;
}

.number-unit {
  font-size: 14px;
  color: #999;
}

/* 添加按钮 */
.add-btn {
  padding: 6px 12px;
  background: linear-gradient(135deg, #E8B686 0%, #D4A574 100%);
  border-radius: 16px;
}

.add-text {
  font-size: 13px;
  color: #fff;
}

/* 选项列表 */
.option-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.option-card {
  background: #fff;
  border-radius: 12px;
  padding: 12px;
}

.option-main {
  display: flex;
  align-items: center;
}

.option-image {
  width: 50px;
  height: 50px;
  border-radius: 8px;
  flex-shrink: 0;
  margin-right: 12px;
}

.option-info {
  flex: 1;
  min-width: 0;
}

.option-label {
  font-size: 14px;
  font-weight: 500;
  color: #333;
  display: block;
}

.option-prompt {
  font-size: 12px;
  color: #999;
  margin-top: 2px;
  display: block;
}

.option-meta {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-top: 4px;
}

.grade-tag {
  font-size: 12px;
  font-weight: 500;
}

.probability-text {
  font-size: 12px;
  color: #999;
}

.option-actions {
  display: flex;
  gap: 8px;
  margin-top: 12px;
  padding-top: 12px;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  flex: 1;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 16px;
  font-size: 13px;
  color: #666;
}

.action-btn.delete {
  background: #FFEBEE;
  color: #F44336;
}

/* 空状态 */
.empty-options {
  padding: 40px 20px;
  text-align: center;
  background: #fff;
  border-radius: 12px;
}

.empty-text {
  font-size: 14px;
  color: #999;
}

/* 底部保存按钮 */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 70px;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 16px;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 1rpx solid #f0f0f0;
}

.save-btn {
  flex: 1;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #E8B686 0%, #D4A574 100%);
  border-radius: 22px;
}

.save-text {
  font-size: 15px;
  color: #fff;
  font-weight: 500;
}

/* 选项编辑弹窗 */
.option-editor-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 200;
  display: flex;
  align-items: flex-end;
}

.option-editor {
  width: 100%;
  max-height: 80vh;
  background: #fff;
  border-radius: 20px 20px 0 0;
  display: flex;
  flex-direction: column;
}

.editor-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px;
  border-bottom: 1rpx solid #f0f0f0;
}

.editor-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.close-btn {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  color: #999;
}

.editor-content {
  flex: 1;
  padding: 16px;
  overflow-y: auto;
}

.editor-footer {
  display: flex;
  padding: 16px;
  gap: 12px;
  border-top: 1rpx solid #f0f0f0;
  padding-bottom: calc(16px + env(safe-area-inset-bottom));
}

.cancel-btn {
  flex: 1;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 22px;
}

.cancel-btn .btn-text {
  font-size: 15px;
  color: #666;
}

.confirm-btn {
  flex: 1;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #E8B686 0%, #D4A574 100%);
  border-radius: 22px;
}

.confirm-btn .btn-text {
  font-size: 15px;
  color: #fff;
  font-weight: 500;
}

/* 图片选择器 */
.image-picker {
  width: 80px;
  height: 80px;
  border-radius: 8px;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.picker-preview {
  width: 100%;
  height: 100%;
}

.picker-placeholder {
  font-size: 14px;
  color: #999;
}

/* 品级选择 */
.grade-list {
  display: flex;
  gap: 12px;
}

.grade-item {
  flex: 1;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 18px;
  border: 2rpx solid;
  transition: all 0.2s;
}

.grade-name {
  font-size: 13px;
  font-weight: 500;
}

/* 底部安全区 */
.safe-bottom {
  height: 20px;
}
