/* 模板市场首页样式 */

.page-container {
  min-height: 100vh;
  background: #FDF8F3;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: linear-gradient(135deg, #E8B686 0%, #D4A574 100%);
}

.nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16px;
}

.lang-switch {
  display: flex;
  align-items: center;
  padding: 4px;
  background: rgba(255, 255, 255, 0.35);
  border-radius: 8px;
  gap: 2px;
}

.lang-option {
  padding: 4px 10px;
  font-size: 12px;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 500;
  border-radius: 6px;
}

.lang-option.active {
  background: #fff;
  color: #C68B4D;
}

.nav-title-img {
  height: 28px;
}

.nav-placeholder {
  width: 60px;
}

/* 分类 Tab */
.category-tabs {
  position: fixed;
  left: 0;
  right: 0;
  z-index: 99;
  background: #FDF8F3;
}

.tabs-scroll {
  width: 100%;
}

.tabs-container {
  display: flex;
  padding: 0 8px;
  white-space: nowrap;
}

.tab-item {
  position: relative;
  padding: 12px 16px;
  font-size: 15px;
  color: #999;
  flex-shrink: 0;
}

.tab-item.active {
  color: #C68B4D;
  font-weight: 600;
}

/* 模板列表 */
.template-list {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  overflow-y: auto;
  background: #FDF8F3;
}

/* Banner 轮播图 */
.banner-section {
  padding: 12px;
}

.banner-swiper {
  width: 100%;
  height: 320rpx;
  border-radius: 16px;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 16px;
}

/* 瀑布流容器 */
.waterfall-container {
  display: flex;
  padding: 12px;
  gap: 12px;
}

.waterfall-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

/* 模板卡片 - 科技感风格 */
.template-card {
  background: linear-gradient(145deg, #ffffff 0%, #faf8f5 100%);
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(198, 139, 77, 0.08);
  transition: all 0.3s ease;
  position: relative;
}

/* 卡片顶部高亮条 */
.template-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, #E8B686, #C68B4D, #D4A574);
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 2;
}

.template-card:active {
  transform: scale(0.98);
  box-shadow: 0 2px 10px rgba(198, 139, 77, 0.15);
}

.template-card:active::before {
  opacity: 1;
}

/* 图片包装层 */
.card-image-wrap {
  position: relative;
  overflow: hidden;
}

.card-image {
  width: 100%;
  display: block;
  transition: transform 0.3s ease;
}

/* 图片底部渐变遮罩 */
.card-image-wrap::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40px;
  background: linear-gradient(transparent, rgba(0,0,0,0.03));
  pointer-events: none;
}

/* 卡片底部信息区 - 两行布局 */
.card-bottom {
  display: flex;
  flex-direction: column;
  padding: 10px 12px;
  background: linear-gradient(180deg, rgba(255,255,255,0) 0%, rgba(253,248,243,0.5) 100%);
}

.card-title {
  font-size: 14px;
  font-weight: 400;
  color: #2d2d2d;
  margin-bottom: 8px;
}

/* 操作按钮 - 简约边框风格 */
.action-btn {
  align-self: flex-end;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 6px 12px;
  background: #fff;
  border: 1px solid #eee;
  border-radius: 16px;
}

.action-btn:active {
  background: #f9f9f9;
}

.action-text {
  font-size: 14px;
  color: #333;
  font-weight: 600;
}

/* 加载状态 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.loading-spinner {
  width: 20px;
  height: 20px;
  border: 2px solid #eee;
  border-top-color: #C68B4D;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-right: 8px;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 13px;
  color: #999;
}

/* 没有更多 */
.no-more {
  padding: 20px;
  text-align: center;
}

.no-more-text {
  font-size: 12px;
  color: #ccc;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80px 20px;
}

.empty-text {
  font-size: 16px;
  color: #999;
  margin-bottom: 8px;
}

.empty-hint {
  font-size: 13px;
  color: #ccc;
}

/* 底部安全区 */
.safe-bottom {
  height: calc(env(safe-area-inset-bottom) + 120px);
}
