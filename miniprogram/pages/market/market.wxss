/* 模板市场首页样式 */

.page-container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: linear-gradient(135deg, #E8B686 0%, #D4A574 100%);
}

.nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 16px;
}

.nav-search {
  flex: 1;
  max-width: 300px;
  height: 32px;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16px;
  display: flex;
  align-items: center;
  padding: 0 12px;
}

.search-icon {
  width: 16px;
  height: 16px;
  margin-right: 8px;
  opacity: 0.5;
}

.search-placeholder {
  font-size: 14px;
  color: #999;
}

/* 分类 Tab */
.category-tabs {
  position: fixed;
  left: 0;
  right: 0;
  z-index: 99;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.tabs-scroll {
  width: 100%;
}

.tabs-container {
  display: flex;
  padding: 0 8px;
  white-space: nowrap;
}

.tab-item {
  position: relative;
  padding: 12px 16px;
  font-size: 14px;
  color: #666;
  flex-shrink: 0;
}

.tab-item.active {
  color: #C68B4D;
  font-weight: 600;
}

.tab-indicator {
  position: absolute;
  bottom: 4px;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 3px;
  background: #C68B4D;
  border-radius: 2px;
}

/* 模板列表 */
.template-list {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  overflow-y: auto;
}

/* 瀑布流容器 */
.waterfall-container {
  display: flex;
  padding: 8px;
  gap: 8px;
}

.waterfall-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

/* 模板卡片 */
.template-card {
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.card-image-wrap {
  position: relative;
  width: 100%;
}

.card-image {
  width: 100%;
  display: block;
}

.official-tag,
.featured-tag {
  position: absolute;
  top: 8px;
  left: 8px;
  padding: 2px 8px;
  border-radius: 4px;
  font-size: 10px;
  color: #fff;
}

.official-tag {
  background: linear-gradient(135deg, #C68B4D 0%, #E8B686 100%);
}

.featured-tag {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 100%);
}

.card-info {
  padding: 10px 12px;
}

.card-title {
  font-size: 14px;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.card-meta {
  margin-top: 8px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.card-creator {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.creator-avatar {
  width: 18px;
  height: 18px;
  border-radius: 50%;
  margin-right: 4px;
  flex-shrink: 0;
}

.creator-name {
  font-size: 11px;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-stats {
  flex-shrink: 0;
}

.stat-item {
  font-size: 10px;
  color: #bbb;
}

.card-action {
  margin-top: 10px;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 32px;
  background: linear-gradient(135deg, #E8B686 0%, #D4A574 100%);
  border-radius: 16px;
}

.action-text {
  font-size: 13px;
  color: #fff;
  font-weight: 500;
}

/* 加载状态 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.loading-spinner {
  width: 20px;
  height: 20px;
  border: 2px solid #eee;
  border-top-color: #C68B4D;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-right: 8px;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 13px;
  color: #999;
}

/* 没有更多 */
.no-more {
  padding: 20px;
  text-align: center;
}

.no-more-text {
  font-size: 12px;
  color: #ccc;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
}

.empty-icon {
  width: 120px;
  height: 120px;
  margin-bottom: 16px;
  opacity: 0.5;
}

.empty-text {
  font-size: 16px;
  color: #999;
  margin-bottom: 8px;
}

.empty-hint {
  font-size: 13px;
  color: #ccc;
}

/* 底部安全区 */
.safe-bottom {
  height: calc(env(safe-area-inset-bottom) + 20px);
}
