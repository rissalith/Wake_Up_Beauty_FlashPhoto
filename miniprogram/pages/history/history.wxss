/* 历史记录页面样式 */
/* 奶油渐变风格 */
page {
  background: linear-gradient(180deg, #FFF8F0 0%, #FFF5EB 50%, #FFFAF5 100%);
}

.container {
  padding: 20rpx;
  padding-bottom: 200rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 未登录提示 */
.login-required {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 120rpx 60rpx 160rpx;
  min-height: 50vh;
}

.login-required .login-icon {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 48rpx;
  opacity: 0.8;
}

.login-required .login-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.login-required .login-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 48rpx;
  text-align: center;
}

.login-required .login-btn {
  width: 280rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #D4A574 0%, #C4956A 100%);
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(196, 149, 106, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.login-required .login-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 底部安全区占位 - 确保最后一行内容不被TabBar遮挡 */
.container::after {
  content: '';
  display: block;
  height: calc(120rpx + env(safe-area-inset-bottom));
}

/* 底部占位区域 */
.bottom-safe-area {
  height: calc(140rpx + env(safe-area-inset-bottom));
  width: 100%;
}

/* AI生成免责声明 */
.ai-disclaimer {
  padding: 16rpx 24rpx;
  margin-bottom: 20rpx;
}

.disclaimer-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

/* 筛选区域 */
.filter-area {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 24rpx;
}

/* 筛选行 */
.filter-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.filter-row:last-child {
  margin-bottom: 0;
}

.filter-label {
  font-size: 26rpx;
  color: #666;
  min-width: 70rpx;
  flex-shrink: 0;
  margin-right: 16rpx;
}

.filter-scroll {
  flex: 1;
  white-space: nowrap;
}

.status-tabs {
  flex: 1;
  flex-wrap: wrap;
}

/* 筛选区块（旧样式保留兼容） */
.filter-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 24rpx;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  gap: 12rpx;
  flex-wrap: nowrap;
}

.type-tabs {
  display: inline-flex;
}

.filter-tab {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 10rpx 20rpx;
  border-radius: 28rpx;
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.filter-tab.active {
  background: linear-gradient(135deg, #F5D0A9 0%, #E8B686 100%);
  color: #fff;
  font-weight: 500;
}

.filter-tab:not(.active):active {
  background: #e8e8e8;
}

.filter-count {
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.3);
}

.filter-tab.active .filter-count {
  background: rgba(255, 255, 255, 0.4);
}

/* 状态筛选标签特殊样式 */
.status-tabs {
  flex-wrap: wrap;
}

.filter-count.pending-count {
  background: rgba(52, 152, 219, 0.2);
  color: #3498db;
}

.filter-tab.active .filter-count.pending-count {
  background: rgba(255, 255, 255, 0.4);
  color: #fff;
}

.filter-count.failed-count {
  background: rgba(231, 76, 60, 0.2);
  color: #e74c3c;
}

.filter-tab.active .filter-count.failed-count {
  background: rgba(255, 255, 255, 0.4);
  color: #fff;
}

/* 类型筛选区块 */
.filter-section.type-filter {
  padding: 16rpx 24rpx;
  margin-bottom: 16rpx;
}

.filter-section.type-filter .filter-tab {
  padding: 8rpx 20rpx;
  font-size: 24rpx;
}

/* 筛选空状态 */
.filter-empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.filter-empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.filter-empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 24rpx;
}

.filter-empty-tip {
  padding: 16rpx 40rpx;
  background: linear-gradient(135deg, #F5D0A9 0%, #E8B686 100%);
  border-radius: 32rpx;
  color: #fff;
  font-size: 26rpx;
}

/* 区块 */
.section {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

/* 空状态时铺满屏幕 */
.section.empty-section {
  min-height: calc(100vh - 220rpx);
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-count {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 垂直排布的section header */
.section-header.vertical {
  flex-direction: column;
  align-items: flex-start;
}

.section-header.vertical .section-title {
  font-size: 34rpx;
  margin-bottom: 8rpx;
}

.section-count-below {
  font-size: 26rpx;
  color: #999;
  font-weight: 400;
}

.header-actions {
  margin-left: auto;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.view-toggle {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f7fa;
  border-radius: 12rpx;
}

/* Tab滑块切换样式 */
.view-mode-tabs {
  display: flex;
  align-items: center;
  background: #f0f0f0;
  border-radius: 12rpx;
  padding: 4rpx;
  position: relative;
}

.tab-slider {
  position: absolute;
  width: 56rpx;
  height: 48rpx;
  background: #fff;
  border-radius: 10rpx;
  left: 4rpx;
  top: 4rpx;
  transition: transform 0.25s ease;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.tab-slider.slide-right {
  transform: translateX(56rpx);
}

.tab-item {
  width: 56rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 1;
}

.tab-item .css-icon {
  width: 28rpx;
  height: 28rpx;
}

/* 未选中状态图标颜色 */
.tab-item .list-view-icon::before {
  background: #999;
  box-shadow: 0 8rpx 0 #999, 0 16rpx 0 #999;
}

.tab-item .grid-view-icon::before {
  background: #999;
  box-shadow:
    10rpx 0 0 #999,
    20rpx 0 0 #999,
    0 10rpx 0 #999,
    10rpx 10rpx 0 #999,
    20rpx 10rpx 0 #999,
    0 20rpx 0 #999,
    10rpx 20rpx 0 #999,
    20rpx 20rpx 0 #999;
}

/* 选中状态图标颜色 */
.tab-item.active .list-view-icon::before {
  background: #E8B686;
  box-shadow: 0 8rpx 0 #E8B686, 0 16rpx 0 #E8B686;
}

.tab-item.active .grid-view-icon::before {
  background: #E8B686;
  box-shadow:
    10rpx 0 0 #E8B686,
    20rpx 0 0 #E8B686,
    0 10rpx 0 #E8B686,
    10rpx 10rpx 0 #E8B686,
    20rpx 10rpx 0 #E8B686,
    0 20rpx 0 #E8B686,
    10rpx 20rpx 0 #E8B686,
    20rpx 20rpx 0 #E8B686;
}

/* CSS图标基础样式 */
.css-icon {
  position: relative;
}

/* 网格视图图标 - 3x3九宫格 */
.grid-view-icon {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.grid-view-icon::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 8rpx;
  background: #E8B686;
  border-radius: 2rpx;
  box-shadow:
    10rpx 0 0 #E8B686,
    20rpx 0 0 #E8B686,
    0 10rpx 0 #E8B686,
    10rpx 10rpx 0 #E8B686,
    20rpx 10rpx 0 #E8B686,
    0 20rpx 0 #E8B686,
    10rpx 20rpx 0 #E8B686,
    20rpx 20rpx 0 #E8B686;
}

/* 列表视图图标 - 三条横线 */
.list-view-icon {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.list-view-icon::before {
  content: '';
  position: absolute;
  top: 4rpx;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: #E8B686;
  border-radius: 2rpx;
  box-shadow: 0 8rpx 0 #E8B686, 0 16rpx 0 #E8B686;
}

/* 删除图标 */
.delete-icon {
  width: 28rpx;
  height: 28rpx;
}

.delete-icon::before,
.delete-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 20rpx;
  height: 3rpx;
  background: #999;
  border-radius: 2rpx;
}

.delete-icon::before {
  transform: translate(-50%, -50%) rotate(45deg);
}

.delete-icon::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}

/* 下载图标 */
.download-icon {
  width: 28rpx;
  height: 28rpx;
}

.download-icon::before {
  content: '';
  position: absolute;
  top: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 4rpx;
  height: 16rpx;
  background: #E8B686;
}

.download-icon::after {
  content: '';
  position: absolute;
  bottom: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 8rpx solid #E8B686;
}

/* 大号历史图标（空状态） */
.empty-icon-wrap {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.3;
}

.history-icon-large {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #E8B686;
  border-radius: 50%;
  position: relative;
}

.history-icon-large::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 4rpx;
  height: 24rpx;
  background: #E8B686;
  transform-origin: bottom center;
  transform: translate(-50%, -100%) rotate(0deg);
}

.history-icon-large::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 4rpx;
  height: 16rpx;
  background: #E8B686;
  transform-origin: bottom center;
  transform: translate(-50%, -100%) rotate(90deg);
}

.select-mode-btn {
  font-size: 26rpx;
  color: #C68B4D;
  padding: 8rpx 20rpx;
}

/* 多选操作栏 */
.select-bar {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
  margin-bottom: 24rpx;
  flex-wrap: nowrap;
}

.select-all {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #333;
  flex-shrink: 0;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #ccc;
  border-radius: 50%;
  position: relative;
}

.checkbox.checked {
  background: linear-gradient(135deg, #F5D0A9 0%, #E8B686 100%);
  border-color: #E8B686;
}

.checkbox.checked::after {
  content: '';
  position: absolute;
  left: 10rpx;
  top: 5rpx;
  width: 8rpx;
  height: 14rpx;
  border: solid #fff;
  border-width: 0 3rpx 3rpx 0;
  transform: rotate(45deg);
}

.selected-count {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  min-width: 60rpx;
}

/* 批量操作按钮组 */
.batch-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.batch-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx;
  background: #fcfcfc;
  border-radius: 16rpx;
  min-width: 90rpx;
  transition: all 0.2s ease;
  border: 1rpx solid #f0f0f0;
}

.batch-btn:active {
  background: #f0f0f0;
  transform: scale(0.95);
}

.batch-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 4rpx;
}

.batch-btn-text {
  font-size: 20rpx;
  color: #888;
  white-space: nowrap;
  font-weight: 500;
}

.batch-btn.delete .batch-btn-text {
  color: #ff8a8a;
}

.batch-btn.disabled {
  opacity: 0.5;
}

.batch-btn.disabled .batch-icon {
  filter: grayscale(100%) opacity(0.3);
}

/* 邮箱小图标 */
.email-icon-small {
  width: 34rpx;
  height: 26rpx;
  border: 3rpx solid #E8B686;
  border-radius: 6rpx;
  box-sizing: border-box;
  position: relative;
  margin-top: 4rpx;
}

.email-icon-small::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 14rpx solid transparent;
  border-right: 14rpx solid transparent;
  border-top: 11rpx solid #E8B686;
}

.send-email-btn {
  background: linear-gradient(135deg, #F5D0A9 0%, #E8B686 100%);
  color: #fff;
  font-size: 26rpx;
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
}

.send-email-btn.disabled {
  background: #ccc;
}

/* 历史列表项复选框 */
.item-checkbox {
  margin-right: 16rpx;
}

.history-item.selected {
  background: rgba(102, 126, 234, 0.1);
}

/* 进行中任务 */
.task-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.task-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 16rpx;
}

.task-preview {
  width: 100rpx;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.task-img {
  width: 100%;
  height: 100%;
}

.task-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(255,255,255,0.3);
  border-top-color: #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.task-info {
  flex: 1;
}

.task-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.task-status {
  font-size: 24rpx;
  color: #C68B4D;
}

/* 失败任务样式 */
.failed-section {
  background: #fff5f5;
}

.failed-title {
  color: #e74c3c;
}

.clear-failed-btn {
  margin-left: auto;
  font-size: 24rpx;
  color: #e74c3c;
  padding: 8rpx 20rpx;
  border: 1rpx solid #e74c3c;
  border-radius: 20rpx;
}

.task-item.failed {
  background: rgba(231, 76, 60, 0.05);
}

.task-failed-icon {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(231, 76, 60, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.failed-x {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
}

.failed-status {
  color: #e74c3c !important;
}

.task-time {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-top: 4rpx;
}

.task-delete {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 50%;
}

.task-delete image {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.5;
}

/* 失败任务操作按钮组 */
.task-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 取消按钮样式（进行中任务） */
.task-cancel-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 50%;
}

.task-cancel-btn .cancel-icon {
  font-size: 28rpx;
  color: #999;
}

.task-cancel-btn:active {
  background: rgba(231, 76, 60, 0.1);
}

.task-cancel-btn:active .cancel-icon {
  color: #e74c3c;
}

/* 重试按钮样式 */
.task-retry-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #F5D0A9 0%, #E8B686 100%);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(232, 182, 134, 0.3);
}

.task-retry-btn .retry-icon {
  width: 28rpx;
  height: 28rpx;
}

.task-retry-btn-text {
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-btn {
  padding: 20rpx 60rpx;
  background: linear-gradient(135deg, #F5D0A9 0%, #E8B686 100%);
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #fff;
}

/* 历史列表 - 列表视图 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 16rpx;
}

.history-img {
  width: 100rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  background: #eee;
}

.history-info {
  flex: 1;
  min-width: 0;
}

.history-spec {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.history-time {
  font-size: 24rpx;
  color: #999;
}

/* 状态文本 */
.history-status {
  font-size: 24rpx;
  display: block;
  margin-bottom: 4rpx;
}

.history-status.pending {
  color: #3498db;
}

.history-status.failed {
  color: #e74c3c;
}

/* 图片容器（列表视图） */
.history-img-wrap {
  position: relative;
  flex-shrink: 0;
  width: 100rpx;
  height: 120rpx;
  margin-right: 24rpx;
}

.history-img-wrap .history-img {
  width: 100%;
  height: 100%;
  margin-right: 0;
}

/* 状态覆盖层 */
.status-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
}

.status-overlay.pending {
  background: rgba(52, 152, 219, 0.7);
}

.status-overlay.failed {
  background: rgba(231, 76, 60, 0.7);
}

.status-overlay .loading-spinner.small {
  width: 36rpx;
  height: 36rpx;
  border-width: 3rpx;
}

.status-overlay .failed-x {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
}

/* 进行中/失败项目样式 */
.history-item.pending-item {
  background: rgba(52, 152, 219, 0.08);
  border: 1rpx solid rgba(52, 152, 219, 0.2);
}

.history-item.failed-item {
