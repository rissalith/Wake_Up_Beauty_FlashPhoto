/* 通用场景页面样式 - 紧凑版 */
.scene-page {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.main-content {
  flex: 1;
  height: calc(100vh - 100rpx);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 3rpx solid #f3f3f3;
  border-top: 3rpx solid #ff6b35;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #999;
}

/* 顶部提醒 */
.top-notice {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 16rpx 24rpx;
  background: #ff6b35;
  color: #fff;
  text-align: center;
  font-size: 26rpx;
  z-index: 1000;
  transform: translateY(-100%);
  transition: transform 0.3s;
}

.top-notice.show {
  transform: translateY(0);
}

/* 通用区块 - 紧凑 */
.upload-section,
.config-section {
  margin: 16rpx 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

/* 标题旁的问号图标 */
.title-help-icon {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 32rpx;
  height: 32rpx;
  margin-left: 12rpx;
  background: #f5f5f5;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  font-size: 20rpx;
  font-weight: bold;
  color: #999;
}

.title-help-icon:active {
  background: #eee;
  color: #666;
}

.step-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

/* 上传区域 - 紧凑 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 140rpx;
  height: 140rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 32rpx;
  height: 32rpx;
  background: #ff4d4f;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  line-height: 1;
}

.add-image {
  width: 140rpx;
  height: 140rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.add-icon {
  font-size: 40rpx;
  color: #ccc;
  line-height: 1;
}

.add-text {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.upload-tips {
  font-size: 22rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 上传进度样式 */
.uploading-item {
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-progress-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid #e8e8e8;
  border-top: 3rpx solid #E8B686;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.upload-progress-text {
  font-size: 20rpx;
  color: #E8B686;
  margin-top: 8rpx;
  font-weight: 500;
}

/* 性别选择 - 紧凑横向布局 */
.gender-options {
  display: flex;
  gap: 16rpx;
}

.gender-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 0;
  background: #f5f5f5;
  border-radius: 8rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.gender-item.active {
  background: #fff5f0;
  border-color: #ff6b35;
}

.gender-item.male.active {
  background: #f5f9ff;
  border-color: #4a90d9;
}

.gender-icon-wrapper {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8rpx;
}

/* 男性图标 */
.gender-icon-male {
  width: 20rpx;
  height: 20rpx;
  border: 3rpx solid #999;
  border-radius: 50%;
  position: relative;
}

.gender-icon-male::after {
  content: '';
  position: absolute;
  width: 10rpx;
  height: 3rpx;
  background: #999;
  top: 0;
  right: -6rpx;
  transform: rotate(-45deg);
  transform-origin: left center;
}

.gender-item.male.active .gender-icon-male {
  border-color: #4a90d9;
}

.gender-item.male.active .gender-icon-male::after {
  background: #4a90d9;
}

/* 女性图标 */
.gender-icon-female {
  width: 20rpx;
  height: 20rpx;
  border: 3rpx solid #999;
  border-radius: 50%;
  position: relative;
}

.gender-icon-female::after {
  content: '';
  position: absolute;
  width: 3rpx;
  height: 12rpx;
  background: #999;
  bottom: -13rpx;
  left: 50%;
  transform: translateX(-50%);
}

.gender-icon-female::before {
  content: '';
  position: absolute;
  width: 10rpx;
  height: 3rpx;
  background: #999;
  bottom: -9rpx;
  left: 50%;
  transform: translateX(-50%);
}

.gender-item.female.active .gender-icon-female {
  border-color: #ff6b35;
}

.gender-item.female.active .gender-icon-female::after,
.gender-item.female.active .gender-icon-female::before {
  background: #ff6b35;
}

.gender-text {
  font-size: 26rpx;
  color: #666;
}

.gender-item.male.active .gender-text {
  color: #4a90d9;
}

.gender-item.female.active .gender-text {
  color: #ff6b35;
}

/* 单选框/性别选择 - 紧凑 */
.radio-options {
  display: flex;
  gap: 16rpx;
}

.radio-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 0;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.radio-item.active {
  background: #fff5f0;
  border-color: #ff6b35;
  color: #ff6b35;
}

/* 标签选择 - 紧凑 */
.tag-options {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-item {
  padding: 12rpx 20rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.tag-item.active {
  background: #fff5f0;
  border-color: #ff6b35;
  color: #ff6b35;
}

/* 颜色选择 - 紧凑 */
.color-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.color-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx;
  border: 2rpx solid transparent;
  border-radius: 8rpx;
  transition: all 0.2s;
}

.color-item.active {
  border-color: #ff6b35;
}

.color-circle {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2rpx solid #e0e0e0;
}

.color-item.active .color-circle {
  border-color: #ff6b35;
  box-shadow: 0 0 0 2rpx #ff6b35;
}

.color-name {
  font-size: 20rpx;
  color: #666;
  margin-top: 4rpx;
}

.color-item.active .color-name {
  color: #ff6b35;
}

/* 图片标签 - 紧凑 */
.image-tag-scroll {
  white-space: nowrap;
  margin: 0 -20rpx;
  padding: 0 20rpx;
}

.image-tag-options {
  display: inline-flex;
  gap: 16rpx;
  padding: 4rpx 0;
}

.image-tag-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  min-width: 120rpx;
  width: auto;
  padding: 12rpx 12rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
  box-sizing: border-box;
}

.image-tag-item.active {
  border-color: #ff6b35;
}

.tag-image-wrapper {
  position: relative;
}

.tag-image {
  width: 72rpx;
  height: 72rpx;
  border-radius: 6rpx;
  object-fit: cover;
}

.tag-placeholder {
  width: 72rpx;
  height: 72rpx;
  background: #e0e0e0;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  color: #999;
}

.tag-name {
  font-size: 20rpx;
  color: #666;
  margin-top: 8rpx;
  text-align: center;
  white-space: nowrap;
  line-height: 1.4;
}

.image-tag-item.active .tag-name {
  color: #ff6b35;
}

/* 选中指示器圆圈 */
.select-indicator {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
  margin-top: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.select-indicator.selected {
  border-color: #ff6b35;
}

.indicator-dot {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background: #ff6b35;
}

/* 滑块 */
.slider-wrapper {
  padding: 8rpx 0;
}

/* 底部占位 */
.bottom-placeholder {
  height: 140rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  align-items: center;
}

/* 数量选择器 */
.quantity-selector {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border-radius: 40rpx;
  border: 2rpx solid #eee;
}

.qty-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #ff6b35;
  font-weight: 300;
}

.qty-btn.disabled {
  color: #d9d9d9;
}

.qty-value {
  min-width: 72rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.generate-btn {
  flex: 1;
  margin-left: 20rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #ff6b35, #ff8c5a);
  color: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.generate-btn .btn-text {
  font-size: 30rpx;
  font-weight: 500;
}

.generate-btn .btn-points {
  font-size: 26rpx;
  opacity: 0.85;
  margin-left: 8rpx;
  padding-left: 12rpx;
  border-left: 2rpx solid rgba(255,255,255,0.3);
}

.generate-btn.disabled {
  background: #d9d9d9;
}

/* 弹窗 - 紧凑 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4rpx);
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-content {
  width: 86%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.15);
  animation: slideUp 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 支付弹窗特殊样式 */
.pay-modal {
  position: relative;
  padding-top: 48rpx;
}

.pay-modal-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 240rpx;
  background: linear-gradient(135deg, #FFE9DB 0%, #FFD4B8 50%, #FFC9A5 100%);
  opacity: 0.5;
  z-index: 0;
}

/* 关闭按钮 - 右上角 */
.modal-close-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  border-radius: 50%;
  transition: all 0.2s;
  z-index: 10;
  background: rgba(255, 255, 255, 0.8);
}

.modal-close-btn:active {
  background: rgba(0, 0, 0, 0.05);
}

.modal-header {
  position: relative;
  z-index: 1;
  padding: 32rpx 28rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  letter-spacing: 0.5rpx;
}

.modal-close {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  border-radius: 50%;
  transition: all 0.2s;
}

.modal-close:active {
  background: rgba(0, 0, 0, 0.05);
}

.modal-body {
  position: relative;
  z-index: 1;
  padding: 0 28rpx 32rpx;
}

/* 醒币图标装饰 */
.pay-icon-decoration {
  display: flex;
  justify-content: center;
  margin-bottom: 32rpx;
  margin-top: 8rpx;
}

.pay-icon-circle {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #E8B686 0%, #D4956A 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(232, 182, 134, 0.35);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 8rpx 24rpx rgba(232, 182, 134, 0.35);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 12rpx 32rpx rgba(232, 182, 134, 0.45);
  }
}

.pay-icon-star {
  font-size: 56rpx;
  color: #fff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

/* 信息卡片 */
.pay-info-card {
  background: linear-gradient(135deg, #FFFBF7 0%, #FFF 100%);
  border-radius: 20rpx;
  padding: 24rpx 28rpx;
  border: 2rpx solid #F5F0EB;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.pay-info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 400;
}

.info-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.info-value-wrapper {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.info-value-highlight {
  font-size: 40rpx;
  color: #E8B686;
  font-weight: 700;
}

.info-unit {
  font-size: 24rpx;
  color: #999;
  font-weight: 400;
}

.highlight-row {
  background: linear-gradient(90deg, rgba(232, 182, 134, 0.08) 0%, rgba(232, 182, 134, 0.15) 50%, rgba(232, 182, 134, 0.08) 100%);
  margin: 0 -28rpx;
  padding: 20rpx 28rpx;
  border-radius: 12rpx;
}

/* 支付后余额行 - 特殊样式 */
.balance-after-row {
  background: linear-gradient(135deg, #FFF1F2 0%, #FFE4E6 100%);
  margin: 0 -28rpx -24rpx;
  padding: 20rpx 28rpx 24rpx;
  border-radius: 0 0 18rpx 18rpx;
}

.info-label-after {
  font-size: 28rpx;
  color: #BE123C;
  font-weight: 600;
}

.info-value-after {
  font-size: 36rpx;
  color: #E11D48;
  font-weight: 700;
}

.info-unit-after {
  font-size: 24rpx;
  color: #BE123C;
  font-weight: 500;
}

.pay-info-divider {
  height: 1rpx;
  background: linear-gradient(90deg, transparent 0%, #E8E8E8 50%, transparent 100%);
  margin: 0 -12rpx;
}

.pay-warning {
  margin-top: 24rpx;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #FFF4F0 0%, #FFE9E1 100%);
  border: 2rpx solid #FFDDD3;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  animation: shake 0.5s ease;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-8rpx); }
  75% { transform: translateX(8rpx); }
}

.warning-icon {
  width: 36rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  flex-shrink: 0;
}

.pay-warning text {
  font-size: 26rpx;
  color: #FF6B6B;
  font-weight: 500;
}

/* 增强版余额不足提示 */
.pay-warning-enhanced {
  margin-top: 24rpx;
  background: linear-gradient(135deg, #FFF9F5 0%, #FFF4EE 100%);
  border: 2rpx solid #FFE4D6;
  border-radius: 16rpx;
  padding: 20rpx;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.warning-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.pay-warning-enhanced .warning-icon {
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 700;
  flex-shrink: 0;
}

.warning-title {
  font-size: 28rpx;
  color: #FF6B6B;
  font-weight: 600;
}

.warning-desc {
  font-size: 24rpx;
  color: #FF8E53;
  margin-bottom: 16rpx;
  padding-left: 44rpx;
}

.earn-points-tips {
  background: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
}

.earn-tip-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.earn-tip-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.earn-tip-item:last-child {
  border-bottom: none;
}

.earn-tip-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.earn-tip-text {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.earn-tip-arrow {
  font-size: 28rpx;
  color: #ccc;
}

.privacy-link {
  margin-top: 16rpx;
  color: #ff6b35;
  font-size: 26rpx;
}

.modal-footer {
  padding: 20rpx 28rpx 32rpx;
  position: relative;
  z-index: 1;
}

.pay-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.2s;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.btn-recharge {
  background: linear-gradient(135deg, #6C757D 0%, #5A6268 100%);
  color: #fff;
}

.btn-recharge:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.btn-confirm {
  background: linear-gradient(135deg, #E8B686 0%, #D4956A 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(232, 182, 134, 0.4);
}

.btn-confirm:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(232, 182, 134, 0.5);
}

/* 保留旧样式以兼容其他弹窗 */
.btn-secondary {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.btn-primary {
  color: #ff6b35;
  font-weight: 600;
}

/* ========== 骰子规则弹窗 ========== */
.dice-rules-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.dice-rules-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.dice-rules-content {
  position: relative;
  width: 620rpx;
  max-height: 80vh;
  background: linear-gradient(180deg, #fff9e6 0%, #fff 20%);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
}

.dice-rules-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  background: linear-gradient(135deg, #c41e3a 0%, #8b0000 100%);
  border-bottom: 4rpx solid #ffd700;
}

.dice-rules-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #ffd700;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.dice-rules-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  color: #ffd700;
  opacity: 0.8;
}

.dice-rules-close:active {
  opacity: 1;
}

/* 规则说明区域 */
.dice-rules-section {
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0e6d0;
}

.dice-rules-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.dice-rules-label {
  font-size: 28rpx;
  color: #8b4513;
  font-weight: 500;
}

.dice-rules-value {
  font-size: 26rpx;
  color: #666;
}

/* 声明区域 */
.dice-rules-disclaimer {
  padding: 16rpx 32rpx;
  background: #fff5e6;
  border-bottom: 1rpx solid #f0e6d0;
}

.dice-disclaimer-text {
  font-size: 22rpx;
  color: #999;
  text-align: center;
  display: block;
}

/* 选项池区域 */
.dice-pool-section {
  padding: 20rpx 32rpx 32rpx;
}

.dice-pool-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #8b4513;
  margin-bottom: 16rpx;
}

.dice-pool-list {
  max-height: 400rpx;
}

.dice-pool-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f0e8;
}

.dice-pool-item:last-child {
  border-bottom: none;
}

.dice-pool-item-img {
  width: 64rpx;
  height: 64rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
  flex-shrink: 0;
}

.dice-pool-item-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 8rpx;
  background: linear-gradient(135deg, #fff9e6 0%, #fff5d6 100%);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  flex-shrink: 0;
}

.dice-pool-item-info {
  flex: 1;
  margin-left: 16rpx;
  min-width: 0;
}

.dice-pool-item-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dice-pool-item-rarity {
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  margin-top: 4rpx;
  display: inline-block;
}

.dice-pool-item-rarity.legendary {
  background: linear-gradient(135deg, #ff9800, #e65100);
  color: #fff;
}

.dice-pool-item-rarity.epic {
  background: linear-gradient(135deg, #9c27b0, #6a1b9a);
  color: #fff;
}

.dice-pool-item-rarity.rare {
  background: linear-gradient(135deg, #2196f3, #1565c0);
  color: #fff;
}

.dice-pool-item-rarity.uncommon {
  background: linear-gradient(135deg, #4caf50, #2e7d32);
  color: #fff;
}

.dice-pool-item-rarity.common {
  background: #e0e0e0;
  color: #666;
}

.dice-pool-item-prob {
  font-size: 26rpx;
  font-weight: 600;
  color: #c41e3a;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.dice-pool-empty {
  padding: 40rpx;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}

/* ========== 双栏布局样式 ========== */
.dual-column-layout {
  display: flex;
  flex-direction: row;
  padding: 16rpx;
  gap: 16rpx;
}

/* 左侧列 - 参考图 */
.left-column {
  width: 45%;
  flex-shrink: 0;
}

/* 右侧列 - 上传区和流程组件 */
.right-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 参考图区域 */
.reference-section {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.reference-main-image {
  position: relative;
  width: 100%;
  aspect-ratio: 3/4;
  overflow: hidden;
}

.reference-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.reference-badge {
  position: absolute;
  bottom: 12rpx;
  right: 12rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 6rpx 12rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 20rpx;
}

.badge-icon {
  width: 24rpx;
  height: 24rpx;
}

.badge-text {
  font-size: 20rpx;
  color: #fff;
  font-weight: 500;
}

/* 多参考图列表 */
.reference-list {
  padding: 12rpx 16rpx;
  white-space: nowrap;
}

.reference-thumb-list {
  display: inline-flex;
  gap: 12rpx;
}

.reference-thumb {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
  border: 3rpx solid transparent;
  transition: all 0.2s;
}

.reference-thumb.active {
  border-color: #ff6b35;
}

.thumb-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 参考图说明 */
.reference-info {
  padding: 12rpx 16rpx 16rpx;
  border-top: 1rpx solid #f5f5f5;
}

.reference-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 用户上传区 */
.user-upload-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.upload-count {
  font-size: 24rpx;
  color: #999;
}

.upload-slots {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 12rpx;
}

.upload-slot {
  position: relative;
  width: calc(50% - 6rpx);
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-slot.filled {
  background: #f5f5f5;
}

.upload-slot.empty {
  background: #fafafa;
  border: 2rpx dashed #ddd;
}

.upload-slot.empty.required {
  border-color: #ff6b35;
  border-style: dashed;
}

.upload-slot.uploading {
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
}

.slot-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.slot-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  width: 20rpx;
  height: 20rpx;
}

.slot-label {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 8rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
}

.slot-label text {
  font-size: 20rpx;
  color: #fff;
}

.slot-add-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.slot-add-icon image {
  width: 100%;
  height: 100%;
  opacity: 0.5;
}

.slot-title {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.slot-hint {
  font-size: 20rpx;
  color: #999;
  text-align: center;
  margin-top: 4rpx;
}

.required-badge {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  padding: 4rpx 8rpx;
  background: #ff6b35;
  border-radius: 6rpx;
}

.required-badge text {
  font-size: 18rpx;
  color: #fff;
}

.upload-tips {
  font-size: 22rpx;
  color: #999;
  margin-top: 12rpx;
  text-align: center;
}

/* 流程组件区 */
.flow-components-section {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.flow-components-section .config-section {
  margin: 0;
  padding: 16rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.flow-components-section .section-header {
  padding: 0 0 12rpx 0;
}

/* Prompt 预览区 */
.prompt-preview-section {
  margin: 16rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.prompt-preview-section .section-header {
  padding: 16rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.preview-toggle {
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 24rpx;
  color: #ff6b35;
}

.toggle-icon {
  width: 24rpx;
  height: 24rpx;
  transition: transform 0.3s;
}

.toggle-icon.expanded {
  transform: rotate(180deg);
}

.prompt-preview-content {
  padding: 16rpx 20rpx;
  max-height: 120rpx;
  overflow: hidden;
  transition: max-height 0.3s;
}

.prompt-preview-content.expanded {
  max-height: 400rpx;
  overflow-y: auto;
}

.prompt-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  word-break: break-all;
}

.prompt-preview-footer {
  padding: 12rpx 20rpx;
  background: #fafafa;
  border-top: 1rpx solid #f5f5f5;
}

.preview-hint {
  font-size: 22rpx;
  color: #999;
}

/* 响应式调整 - 小屏幕时改为单列 */
@media screen and (max-width: 400px) {
  .dual-column-layout {
    flex-direction: column;
  }

  .left-column {
    width: 100%;
  }

  .reference-main-image {
    aspect-ratio: 16/9;
  }

  .upload-slot {
    width: calc(33.33% - 8rpx);
  }
}
