/* 充值页面样式 */
page {
  background: linear-gradient(180deg, #FFF8F0 0%, #FFF5EB 50%, #FFFAF5 100%);
}

.container {
  padding: 32rpx;
  padding-bottom: 200rpx;
}

/* iOS 提示 */
.ios-notice {
  background: linear-gradient(135deg, #FFF5E6 0%, #FFE8D0 100%);
  border: 2rpx solid #E8B686;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: flex-start;
}

.ios-notice-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.ios-notice-content {
  flex: 1;
}

.ios-notice-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #8B5A2B;
  margin-bottom: 16rpx;
}

.ios-notice-desc {
  font-size: 26rpx;
  color: #A0522D;
  margin-bottom: 20rpx;
}

.ios-notice-tips {
  background: rgba(255,255,255,0.6);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
}

.ios-tip-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
}

/* 余额区域 */
.balance-section {
  background: linear-gradient(135deg, #E8B686 0%, #D4956A 100%);
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 48rpx;
  box-shadow: 0 8rpx 32rpx rgba(232, 182, 134, 0.4);
}

.balance-icon {
  font-size: 64rpx;
  color: #fff;
  margin-right: 32rpx;
  text-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2);
}

.balance-info {
  display: flex;
  flex-direction: column;
}

.balance-label {
  font-size: 26rpx;
  color: rgba(255,255,255,0.8);
  margin-bottom: 8rpx;
}

.balance-value {
  font-size: 56rpx;
  font-weight: 700;
  color: #fff;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.15);
}

/* 分区标题 */
.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

/* 套餐网格 */
.packages-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.package-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx 16rpx;
  text-align: center;
  position: relative;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.package-item.selected {
  border-color: #E8B686;
  background: linear-gradient(180deg, #FFF9F3 0%, #FFF 100%);
  box-shadow: 0 4rpx 16rpx rgba(232, 182, 134, 0.3);
}

.package-amount {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.package-points {
  font-size: 24rpx;
  color: #666;
}

.package-bonus {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 0 16rpx 0 12rpx;
  font-weight: 500;
}

.package-check {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #E8B686;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

/* 自定义金额 */
.custom-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 40rpx;
}

.custom-header {
  display: flex;
  align-items: center;
}

.custom-radio {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.custom-radio.selected {
  border-color: #E8B686;
}

.radio-inner {
  width: 20rpx;
  height: 20rpx;
  background: #E8B686;
  border-radius: 50%;
}

.custom-label {
  font-size: 28rpx;
  color: #333;
}

.custom-input-wrap {
  display: flex;
  align-items: center;
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  margin-top: 20rpx;
  height: 88rpx;
}

.input-prefix {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 8rpx;
}

.custom-input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.input-suffix-wrap {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.input-suffix {
  font-size: 24rpx;
  color: #E8B686;
}

.input-bonus {
  font-size: 22rpx;
  color: #fff;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  padding: 2rpx 10rpx;
  border-radius: 16rpx;
  margin-left: 8rpx;
  font-weight: 500;
}

/* 说明区域 */
.tips-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.tips-item {
  font-size: 24rpx;
  color: #999;
  line-height: 2;
}

/* 底部按钮 */
.footer-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.btn-amount {
  font-size: 26rpx;
  color: #666;
}

.amount-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #E8B686;
  margin-left: 8rpx;
}

.recharge-btn {
  background: linear-gradient(135deg, #E8B686 0%, #D4956A 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx 80rpx;
  border-radius: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(232, 182, 134, 0.4);
}

.recharge-btn.disabled {
  opacity: 0.6;
}
