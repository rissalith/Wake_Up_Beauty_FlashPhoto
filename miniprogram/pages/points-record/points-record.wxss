/* 醒币明细页面样式 */
page {
  background: linear-gradient(180deg, #FFF8F0 0%, #FFF5EB 50%, #FFFAF5 100%);
}

.container {
  padding: 32rpx;
  padding-bottom: 60rpx;
}

/* 余额卡片 */
.balance-card {
  background: linear-gradient(135deg, #E8B686 0%, #D4956A 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(232, 182, 134, 0.4);
}

.balance-icon {
  font-size: 56rpx;
  color: #fff;
  margin-right: 24rpx;
  text-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2);
}

.balance-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.balance-label {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
  margin-bottom: 4rpx;
}

.balance-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
}

.recharge-entry {
  background: rgba(255,255,255,0.2);
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #fff;
  font-size: 26rpx;
}

.recharge-entry .arrow {
  font-size: 32rpx;
}

/* 记录区域 */
.records-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

/* 记录列表 */
.record-list {
  display: flex;
  flex-direction: column;
}

.record-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.record-item:last-child {
  border-bottom: none;
}

.record-left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.record-icon {
  width: 64rpx;
  height: 64rpx;
  background: #f5f7fa;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  position: relative;
}

/* 礼物图标 - 新用户奖励 */
.record-icon.icon-gift {
  background: linear-gradient(135deg, #FFE5E5 0%, #FFD6D6 100%);
}
.record-icon.icon-gift::before {
  content: '';
  width: 24rpx;
  height: 24rpx;
  border: 4rpx solid #E57373;
  border-radius: 4rpx;
  position: absolute;
}
.record-icon.icon-gift::after {
  content: '';
  width: 4rpx;
  height: 32rpx;
  background: #E57373;
  position: absolute;
  top: 12rpx;
}

/* 分享图标 */
.record-icon.icon-share {
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
}
.record-icon.icon-share::before {
  content: '';
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-bottom: 16rpx solid #42A5F5;
  position: absolute;
  top: 16rpx;
}
.record-icon.icon-share::after {
  content: '';
  width: 4rpx;
  height: 16rpx;
  background: #42A5F5;
  position: absolute;
  bottom: 16rpx;
}

/* 用户图标 - 邀请好友 */
.record-icon.icon-users {
  background: linear-gradient(135deg, #F3E5F5 0%, #E1BEE7 100%);
}
.record-icon.icon-users::before {
  content: '';
  width: 16rpx;
  height: 16rpx;
  background: #AB47BC;
  border-radius: 50%;
  position: absolute;
  top: 16rpx;
}
.record-icon.icon-users::after {
  content: '';
  width: 24rpx;
  height: 12rpx;
  background: #AB47BC;
  border-radius: 12rpx 12rpx 0 0;
  position: absolute;
  bottom: 16rpx;
}

/* 充值图标 */
.record-icon.icon-recharge {
  background: linear-gradient(135deg, #FFF8E1 0%, #FFECB3 100%);
}
.record-icon.icon-recharge::before {
  content: '¥';
  font-size: 28rpx;
  font-weight: 600;
  color: #FFA000;
}

/* 消费图标 */
.record-icon.icon-consume {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
}
.record-icon.icon-consume::before {
  content: '';
  width: 20rpx;
  height: 16rpx;
  border: 4rpx solid #66BB6A;
  border-radius: 4rpx;
  position: absolute;
}
.record-icon.icon-consume::after {
  content: '';
  width: 8rpx;
  height: 8rpx;
  border-right: 4rpx solid #66BB6A;
  border-bottom: 4rpx solid #66BB6A;
  position: absolute;
  top: 8rpx;
  transform: rotate(-45deg);
}

/* 调整图标 */
.record-icon.icon-adjust {
  background: linear-gradient(135deg, #ECEFF1 0%, #CFD8DC 100%);
}
.record-icon.icon-adjust::before {
  content: '';
  width: 24rpx;
  height: 24rpx;
  border: 4rpx solid #78909C;
  border-radius: 50%;
  border-top-color: transparent;
  position: absolute;
}
.record-icon.icon-adjust::after {
  content: '';
  width: 8rpx;
  height: 4rpx;
  background: #78909C;
  position: absolute;
  top: 12rpx;
  right: 14rpx;
  transform: rotate(45deg);
}

/* 默认图标 - 四角星 */
.record-icon.icon-default {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
}
.record-icon.icon-default::before {
  content: '✦';
  font-size: 28rpx;
  color: #E8B686;
}

.record-info {
  display: flex;
  flex-direction: column;
  min-width: 0;
  flex: 1;
}

.record-desc {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.record-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.record-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.record-amount {
  font-size: 32rpx;
  font-weight: 600;
}

.record-amount.positive {
  color: #4CAF50;
}

.record-amount.negative {
  color: #F44336;
}

.record-balance {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  color: #ddd;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  gap: 16rpx;
  color: #999;
  font-size: 24rpx;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid #ddd;
  border-top-color: #E8B686;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 32rpx;
  color: #ccc;
  font-size: 24rpx;
}
