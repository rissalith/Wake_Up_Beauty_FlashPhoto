/* 关于我们页面样式 */
/* 奶油渐变风格 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF8F0 0%, #FFF5EB 50%, #FFFAF5 100%);
  padding: 20rpx;
  padding-bottom: 60rpx;
  box-sizing: border-box;
}

.about-content {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
}

/* 应用头部 */
.app-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0 48rpx;
  border-bottom: 1rpx solid #F0F0F0;
  margin-bottom: 40rpx;
}

.app-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(232, 182, 134, 0.3);
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.app-slogan {
  font-size: 26rpx;
  color: #888;
}

/* 内容区块 */
.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #E8B686;
}

.paragraph {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}

/* 功能列表 */
.feature-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: linear-gradient(135deg, #FFFAF5 0%, #FFF8F0 100%);
  border-radius: 16rpx;
}

/* CSS图标样式 */
.feature-icon-css {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  border-radius: 12rpx;
  position: relative;
}

/* AI美颜图标 - 星星/魔法棒 */
.beauty-feature {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
}
.beauty-feature::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 24rpx;
  height: 24rpx;
  background: #fff;
  clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
}

/* 多种场景图标 - 网格/相册 */
.scene-feature {
  background: linear-gradient(135deg, #E8B686 0%, #D4A574 100%);
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr;
  gap: 4rpx;
  padding: 8rpx;
  box-sizing: border-box;
}
.scene-feature::before,
.scene-feature::after {
  content: '';
  background: rgba(255, 255, 255, 0.9);
  border-radius: 4rpx;
}
.scene-feature::before {
  grid-column: 1;
  grid-row: 1;
}
.scene-feature::after {
  grid-column: 2;
  grid-row: 1;
}

/* 专业规格图标 - 尺寸/标尺 */
.spec-feature {
  background: linear-gradient(135deg, #87CEEB 0%, #5DADE2 100%);
}
.spec-feature::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 28rpx;
  height: 20rpx;
  border: 3rpx solid #fff;
  border-radius: 4rpx;
}
.spec-feature::after {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 12rpx;
  height: 3rpx;
  background: #fff;
}

/* 智能换装图标 - 衣服 */
.outfit-feature {
  background: linear-gradient(135deg, #DDA0DD 0%, #BA55D3 100%);
}
.outfit-feature::before {
  content: '';
  position: absolute;
  top: 10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 10rpx solid #fff;
}
.outfit-feature::after {
  content: '';
  position: absolute;
  bottom: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 24rpx;
  height: 18rpx;
  background: #fff;
  border-radius: 0 0 6rpx 6rpx;
}

.feature-text {
  flex: 1;
}

.feature-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #888;
  line-height: 1.6;
}

/* 联系我们 */
.contact-list {
  margin-bottom: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #F9F9F9;
  border-radius: 12rpx;
}

.contact-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 16rpx;
}

.contact-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.contact-copy {
  font-size: 24rpx;
  color: #E8B686;
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #FFF8F0 0%, #FFECD9 100%);
  border-radius: 16rpx;
}

.contact-tips {
  font-size: 24rpx;
  color: #999;
}

/* 版权信息 */
.copyright {
  padding-top: 40rpx;
  border-top: 1rpx solid #F0F0F0;
  text-align: center;
}

.copyright-text {
  font-size: 24rpx;
  color: #999;
}