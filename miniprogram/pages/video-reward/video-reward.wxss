/* 看视频得醒币页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fff5f5 0%, #fff 30%);
  padding: 20rpx 30rpx;
  padding-top: calc(env(safe-area-inset-top) + 100rpx);
  box-sizing: border-box;
}

/* 信息卡片 */
.info-card {
  display: flex;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.balance-section,
.today-section {
  flex: 1;
  text-align: center;
}

.balance-label,
.today-label {
  font-size: 26rpx;
  color: #999;
  display: block;
}

.balance-value,
.today-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-top: 12rpx;
  display: block;
}

.today-value {
  color: #d32f2f;
}

.divider {
  width: 2rpx;
  background: #eee;
  margin: 0 20rpx;
}

/* 视频区域 */
.video-section {
  margin-bottom: 40rpx;
}

.video-container {
  position: relative;
  width: 100%;
  height: 400rpx;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.video-container.watching {
  background: linear-gradient(135deg, #0f3460 0%, #16213e 100%);
}

.video-placeholder {
  display: flex;
  justify-content: center;
  align-items: center;
}

.play-icon {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 48rpx;
  color: #fff;
}

/* 观看动画 */
.watching-animation {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.wave {
  width: 12rpx;
  height: 60rpx;
  background: #d32f2f;
  border-radius: 6rpx;
  animation: wave 1s ease-in-out infinite;
}

.wave1 { animation-delay: 0s; }
.wave2 { animation-delay: 0.2s; }
.wave3 { animation-delay: 0.4s; }

@keyframes wave {
  0%, 100% { height: 60rpx; }
  50% { height: 120rpx; }
}

/* 进度条 */
.progress-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.2);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #d32f2f 0%, #ff5252 100%);
  transition: width 0.3s ease;
}

/* 倒计时 */
.countdown {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  color: #fff;
  font-size: 28rpx;
}

/* 奖励提示 */
.reward-hint {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 24rpx;
  gap: 12rpx;
}

.hint-text {
  font-size: 28rpx;
  color: #666;
}

.hint-points {
  font-size: 32rpx;
  font-weight: bold;
  color: #d32f2f;
}

/* 操作区域 */
.action-section {
  margin-bottom: 40rpx;
}

.watch-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
  border-radius: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 30rpx rgba(211, 47, 47, 0.3);
}

.watch-btn.disabled {
  background: linear-gradient(135deg, #999 0%, #666 100%);
  box-shadow: none;
}

/* 说明区域 */
.tips-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.tip-num {
  width: 40rpx;
  height: 40rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 成功弹窗 */
.success-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.success-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.success-content {
  position: relative;
  width: 560rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  animation: popup 0.3s ease-out;
}

@keyframes popup {
  from {
    transform: scale(0.8);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.success-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.success-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.success-points {
  font-size: 56rpx;
  font-weight: bold;
  color: #d32f2f;
  margin: 20rpx 0;
}

.success-balance {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.success-btns {
  display: flex;
  gap: 20rpx;
}

.success-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}

.success-btn.continue {
  background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
  color: #fff;
}

.success-btn.back {
  background: #f5f5f5;
  color: #666;
}
