/* 看视频得醒币页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF8F0 0%, #FFF5EB 50%, #FFFAF5 100%);
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

/* 信息卡片 */
.info-card {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
}

.stat-section {
  flex: 1;
  text-align: center;
}

.stat-label {
  font-size: 26rpx;
  color: #999;
  display: block;
}

.stat-value {
  font-size: 44rpx;
  font-weight: bold;
  color: #E8B686;
  margin-top: 12rpx;
  display: block;
}

.stat-value.highlight {
  color: #E8B686;
}

.stat-unit {
  font-size: 24rpx;
  font-weight: normal;
  color: #999;
  margin-left: 4rpx;
}

.divider {
  width: 2rpx;
  background: #f0f0f0;
  margin: 0 8rpx;
}

/* 视频区域 */
.video-section {
  margin-bottom: 24rpx;
}

.video-container {
  position: relative;
  width: 100%;
  height: 340rpx;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.video-container.watching {
  background: linear-gradient(135deg, #0f3460 0%, #16213e 100%);
}

.video-placeholder {
  display: flex;
  justify-content: center;
  align-items: center;
}

.play-icon {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 48rpx;
  color: #fff;
  transition: all 0.3s;
}

.play-icon:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.35);
}

.play-icon.disabled {
  background: rgba(255, 255, 255, 0.1);
}

.play-icon.disabled .play-triangle {
  border-color: transparent transparent transparent rgba(255, 255, 255, 0.5);
}

/* 次数用完提示 */
.exhausted-tip {
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
  text-align: center;
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
}

.video-placeholder {
  display: flex;
  justify-content: center;
  align-items: center;
}

.play-icon {
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.play-triangle {
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 18rpx 0 18rpx 30rpx;
  border-color: transparent transparent transparent #fff;
  margin-left: 8rpx;
}

/* 观看动画 */
.watching-animation {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.wave {
  width: 12rpx;
  height: 60rpx;
  background: #d32f2f;
  border-radius: 6rpx;
  animation: wave 1s ease-in-out infinite;
}

.wave1 { animation-delay: 0s; }
.wave2 { animation-delay: 0.2s; }
.wave3 { animation-delay: 0.4s; }

@keyframes wave {
  0%, 100% { height: 60rpx; }
  50% { height: 120rpx; }
}

/* 进度条 */
.progress-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.2);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #d32f2f 0%, #ff5252 100%);
  transition: width 0.3s ease;
}

/* 倒计时 */
.countdown {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  color: #fff;
  font-size: 28rpx;
}

/* 奖励提示 */
.reward-hint {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  gap: 8rpx;
}

.hint-text {
  font-size: 26rpx;
  color: #666;
}

.hint-points {
  font-size: 30rpx;
  font-weight: bold;
  color: #E8B686;
}

/* 说明区域 */
.tips-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 28rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.tip-num {
  width: 44rpx;
  height: 44rpx;
  background: #FFF5EB;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: #E8B686;
  flex-shrink: 0;
}

.tip-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 成功弹窗 */
.success-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.success-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

/* 彩带喷射容器 */
.confetti-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
}

.confetti {
  position: absolute;
  font-size: 48rpx;
  animation: confetti-fall 2s ease-out forwards;
}

.confetti-1 { left: 10%; animation-delay: 0s; }
.confetti-2 { left: 25%; animation-delay: 0.1s; }
.confetti-3 { left: 40%; animation-delay: 0.2s; }
.confetti-4 { left: 55%; animation-delay: 0.15s; }
.confetti-5 { left: 70%; animation-delay: 0.25s; }
.confetti-6 { left: 85%; animation-delay: 0.05s; }
.confetti-7 { left: 15%; animation-delay: 0.3s; }
.confetti-8 { left: 60%; animation-delay: 0.35s; }

@keyframes confetti-fall {
  0% {
    top: 30%;
    opacity: 1;
    transform: translateY(0) rotate(0deg) scale(1);
  }
  50% {
    opacity: 1;
    transform: translateY(-150rpx) rotate(180deg) scale(1.2);
  }
  100% {
    top: 100%;
    opacity: 0;
    transform: translateY(200rpx) rotate(360deg) scale(0.5);
  }
}

.success-content {
  position: relative;
  width: 560rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  animation: popup 0.3s ease-out;
  z-index: 1;
}

@keyframes popup {
  from {
    transform: scale(0.8);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.success-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.success-icon.bounce {
  animation: bounce 0.6s ease-out;
}

@keyframes bounce {
  0% { transform: scale(0); }
  50% { transform: scale(1.3); }
  70% { transform: scale(0.9); }
  100% { transform: scale(1); }
}

.success-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.success-points {
  font-size: 52rpx;
  font-weight: bold;
  color: #E8B686;
  margin: 20rpx 0;
}

.success-points.scale-in {
  animation: scale-in 0.5s ease-out 0.2s both;
}

@keyframes scale-in {
  0% {
    transform: scale(0.5);
    opacity: 0;
  }
  60% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.success-balance {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.success-btns {
  display: flex;
  gap: 20rpx;
}

.success-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}

.success-btn.continue {
  background: linear-gradient(135deg, #E8B686 0%, #D4956A 100%);
  color: #fff;
}

.success-btn.back {
  background: #f5f5f5;
  color: #666;
}
