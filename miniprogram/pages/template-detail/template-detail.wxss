/* 模板详情页样式 */
.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: linear-gradient(135deg, #E8B686 0%, #C68B4D 100%);
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
  filter: brightness(0) invert(1);
}

.nav-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #fff;
}

.nav-placeholder {
  width: 60rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E8B686;
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 内容区域 */
.content {
  padding: 20rpx;
}

/* 封面图 */
.cover-section {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.cover-image {
  width: 100%;
  display: block;
}

.cover-tip {
  text-align: center;
  padding: 16rpx;
  font-size: 24rpx;
  color: #999;
}

/* 模板信息 */
.info-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.template-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.template-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

/* 标签 */
.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background: #FFF5EB;
  color: #C68B4D;
  font-size: 24rpx;
  border-radius: 20rpx;
}

/* 统计数据 */
.stats-row {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 创作者信息 */
.creator-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.creator-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.creator-info {
  flex: 1;
  margin-left: 20rpx;
}

.creator-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.creator-level {
  font-size: 24rpx;
  color: #C68B4D;
  margin-top: 6rpx;
}

.creator-arrow {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.5;
}

/* 价格信息 */
.price-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #C68B4D;
}

.coin-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.action-buttons {
  display: flex;
  gap: 30rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 22rpx;
  color: #666;
}

.action-btn.active {
  color: #C68B4D;
}

.action-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 4rpx;
}

.do-same-btn {
  flex: 1;
  margin-left: 40rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #E8B686 0%, #C68B4D 100%);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}
