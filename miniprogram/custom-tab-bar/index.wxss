.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: calc(100rpx + env(safe-area-inset-bottom));
  background: #fff;
  display: flex;
  align-items: flex-start;
  justify-content: space-around;
  padding-top: 12rpx;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 1rpx solid #eee;
  z-index: 100;
  box-sizing: border-box;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  position: relative;
}

.tab-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 4rpx;
}

.tab-text {
  font-size: 22rpx;
  color: #999;
  font-weight: 400;
}

.tab-bar-item.active .tab-text {
  color: #5B9BD5;
  font-weight: 500;
}

/* 角标 */
.tab-badge {
  position: absolute;
  top: -4rpx;
  right: 50rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background: #ff4757;
  border-radius: 16rpx;
  font-size: 20rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

/* TabBar禁用状态 */
.tab-bar.disabled {
  opacity: 0.5;
}

.tab-bar-item.item-disabled {
  pointer-events: none;
}

.tab-bar-item.item-disabled .tab-text {
  color: #ccc;
}

.tab-bar-item.item-disabled .tab-icon {
  opacity: 0.5;
}
